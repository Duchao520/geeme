.cover{
  position:fixed;
  left:0;
  top:0;
  width:100%;
  height:100%;
  min-height:100vh;
  background-color: rgba(0, 0, 0, .5);
  opacity: 0;
  z-index:-1;
}

.cover.active{
  opacity: 1;
  z-index:999;
  transition: opacity .625s ease;
}

.modal{
  position: fixed;
  min-width: 600rpx;
  padding:44rpx 0 40rpx;
  top:40%;
  left:50%;
  transform: translate(-50%, -50%);
  background: #fff;
  border-radius:16rpx;
  opacity: 0;
}

.modal.active{
  opacity: 1;
  transition: opacity .625s ease;
}

.modal-title{
  font-size:36rpx;
  color:#333;
  font-weight: 600;
  text-align: center;
}

.modal-content{
  margin-top:10rpx;
  padding:0 60rpx;
  line-height: 1.8;
  font-size:28rpx;
  color:#666;
}

.modal-buttons{
  margin-top:40rpx;
  text-align: center;
}

.modal-buttons > button{
  display: inline-block;
  width: 212rpx;
  height:64rpx;
  line-height:64rpx;
  font-size:28rpx;
  text-align: center;
  border-radius:32rpx;
}

.button1{
  margin-right:56rpx;
  color:#f52d56;
  border: 1px solid #f52d56;
}

.button2{
  color:#fff;
  background:#f52d56;
}