.border-bottom-1px{
  border-bottom:1px solid #efeff4; 
}

.serviceTree{
  padding:0 28rpx 24rpx;
  border-radius:16rpx;
  box-shadow: 0 0 8rpx 0 rgba(0, 0, 0, .1);
}

.tree-type-container{
  margin-top:16rpx;
}

.tree-type-container:first-child{
  margin-top:0;
}

.type-title{
  position: relative;
  height:76rpx;
  color:#262628;
  font-size:30rpx;
  font-weight: 600;
}

.type-title > text{
  position: absolute;
  bottom:8rpx;
}

.type-service-item{
  font-size:0;
  height:90rpx;
  line-height:90rpx;
}

.type-service-item > view{
  display: inline-block;
  vertical-align: middle;
}

.item-select{
  width:44rpx;
  height:100%;
  background-size:32rpx 32rpx;
  background-position: left center;
  background-repeat: no-repeat;
}

.item-name{
  max-width:280rpx;
  margin-right:10rpx;
  color:#666;
  font-size:28rpx;
}

.item-specification{
  max-width:90rpx;
  height:34rpx;
  line-height:34rpx;
  padding:0 4rpx;
  border-radius:4rpx;
  background-color:#f6f6f6;
  color:#999;
  font-size:20rpx;
}

.item-price{
  float:right;
  height:100%;
  padding-right: 24rpx;
  color:#333;
  font-size:28rpx;
  background: no-repeat right center;
  background-size:12rpx 18rpx;
}

.item-price.active{
  color:#f52d56;
}

.symbol{
  font-size:24rpx;
}

.cover{
  position: fixed;
  left:0;
  top:0;
  width:100%;
  height:100%;
  z-index:10;
  background: rgba(0, 0, 0, .5);
}

.popup-container{
  position: fixed;
  left:0;
  bottom:0;
  width:100%;
  height:auto;
  padding:0 32rpx 180rpx;
  z-index:11;
  background:#fff;
}

.popup-productInfo{
  position: relative;
  padding-left:180rpx;
  padding-right:80rpx;
  font-size:34rpx;
}

.popup-image{
  position: absolute;
  left:0;
  top:-60rpx;
  width:160rpx;
  height:160rpx;
  border-radius:6rpx;
  background-color:#f7f7f7;
}

.popup-serviceName{
  margin-top:20rpx;
  color:#333;
}

.popup-price{
  position: absolute;
  text-align: right;
  right:0;
  top:0;
  line-height: normal;
  color:#f52d56;
}

.font-small{
  font-size:24rpx;
}

.popup-price > .font-small{
  color:#9b9b9b;
  text-decoration: line-through;
}

.popup-specification{
  margin-top:70rpx;
}

.popup-specification-container{
  margin-top:20rpx;
  margin-right:-30rpx;
  color:#979797;
}

.popup-specification-container > view{
  display: inline-block;
  padding:0 20rpx;
  margin-right:30rpx;
  margin-bottom:30rpx;
  height:70rpx;
  line-height:70rpx;
  font-size:24rpx;
  border:0.5px solid #979797;
}

.popup-specification-container > view.active{
  color:#f52d56;
  border-color:#f52d56;
}

.popup-amount{
  position: relative;
  margin-top:20rpx;
}

.popup-footer{
  position: absolute;
  left:0;
  bottom:0;
  width:100%;
  height:120rpx;
  line-height:120rpx;
  font-size:34rpx;
  background-color:#fff;
  border-top: 1px solid #efeff4;
}

.footer-button{
  float:right;
  width:240rpx;
  height:100%;
  text-align: center;
  background:#f52d56;
  color:#fff;
}
