@import '/utils/wxss/icon.wxss';
.card{
  position: relative;
  display: inline-block;
  margin-left:26rpx;
  margin-top:28rpx;
  width: 330rpx;
  height:400rpx;
  border-radius:8rpx;
  background-color:#f52d56;
  overflow:hidden;
  color:#fff;
}

.card.used{
  background-color:#778ca2;
}

.card.expired{
  background-color:#b8bdc6;
}

.card-header{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  width: 440rpx;
  margin-left: -55rpx;
  height: 68rpx;
  line-height:68rpx;
  background: #da1b42;
  border-radius: 50%/0 0 100% 100%;
  text-align: center;
  font-size:28rpx;
}

.card.used .card-header{
  background: #8598ab;
}

.card.expired .card-header{
  background: #aeb4bf;
}

.card-watermark{
  position: absolute;
  top:40rpx;
  left:20rpx;
  width:120rpx;
  height:90rpx;
  z-index:2;
  background: url(data:image/png;base64,);
  background-size:100% 100%;
}

.card-main{
  padding: 0 30rpx;
}

.money{
  margin-top:90rpx;
  text-align: center;
  font-size:72rpx;
}

.money > text{
  font-size:34rpx;
}

.time{
  text-align: center;
  font-size:20rpx;
  border-bottom: 4rpx dotted #fff;
  padding-bottom:16rpx;
}

.rules{
  margin-top:20rpx;
  font-size:20rpx;
}

.rules > view{
  margin-bottom: 6rpx;
}

.cover{
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background: rgba(0, 0, 0, .5);
  z-index:100;
}

.popup-container{
  position: absolute;
  bottom:0;
  left:0;
  width:100%;
  background: #fff;
}

.popup-header{
  height:106rpx;
  line-height:106rpx;
  text-align: center;
  color:#333;
  font-size:34rpx;
  border-bottom:1px solid #efeff4;
}

.popup-header > .icon--close{
  position: absolute;
  top:34rpx;
  right:34rpx;
}

.popup-main{
  max-height: 1200rpx;
  padding:0 32rpx 100rpx;
  overflow:scroll;
}

.main-header{
  height:100rpx;
  line-height:100rpx;
  color:#333;
  font-size:28rpx;
  font-weight: 600;
}

.main-line{
  height:80rpx;
  line-height:80rpx;
  font-size:26rpx;
  color:#333;
}

.main-line.title{
  height:60rpx;
  line-height:normal;
  color:#999;
  font-size:24rpx;
}

.main-line:nth-child(2n-1){
  background: #f8f8f8;
}

.main-line:nth-child(2n){
  background: #fff;
}

.main-line-left{
  display: inline-block;
  padding-left:16rpx;
  width:340rpx;
}

.main-line-right{
  display: inline-block;
}