/* components/getlike/getlike.wxss */ 


.like-body {
  width: 100%;
  height: auto;
  padding: 32rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color: rgb(244, 248, 250);
}

.like-item {
  width: 328rpx;
  border-radius: 8rpx;
  background-color: white;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.like-img {
  width: 100%;
  height: 328rpx;
}

.like-content {
  width: 100%;
  /* height: 100%; */
  padding: 12rpx 12rpx 16rpx 12rpx;
}

.like-des {
  width: 304rpx;
  max-height: 80rpx;
  color: rgba(38, 38, 40, 1);
  font-size: 26rpx;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.like-price {
  width: 100%;
  height: 36rpx;
  margin: 8rpx 0;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}

.p1 {
  color: rgba(245, 45, 86, 1);
  font-size: 30rpx;
  display: inline-block;
  margin-right: 8rpx;
  font-weight: 600;
}

.s1 {
  color: rgba(155, 155, 155, 1);
  font-size: 22rpx;
  text-decoration: line-through;
}

.preferential {
  width: 60rpx;
  height: 28rpx;
  text-align: center;
  line-height: 28rpx;
  color: rgba(255, 255, 255, 1);
  background-color: rgb(245, 45, 86);
  font-size: 20rpx;
  border-radius: 2rpx;
}
.likemoneyicon{
  font-size: 20rpx;
}
.likemoneyicons{
  font-size: 18rpx;
}
