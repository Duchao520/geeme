/* pages/RC/pages/evaluationDetail/evaluationDetail.wxss */

.evaluationDetail {
  background: #fff;
  padding: 0 32rpx 200rpx;
}

.header {
  margin-top: 48rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.header-portrait {
  display: inline-block;
  margin-right: 24rpx;
  vertical-align: middle;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.header-text {
  display: inline-block;
  vertical-align: middle;
  line-height: 44rpx;
}

.text-1 {
  font-size: 30rpx;
}

.text-2 {
  font-size: 24rpx;
  color: #9b9b9b;
}

.assessment {
  margin-top: 40rpx;
  font-size: 26rpx;
  color: #262628;
}

.assessment-item {
  height: 50rpx;
  line-height: 50rpx;
}

.assessment-item view {
  display: inline-block;
  vertical-align: middle;
}

.item-title {
  width: 140rpx;
  margin-right: 86rpx;
  text-align: right;
}

.item-score > view {
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-right: 18rpx;
  vertical-align: middle;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.score-get {
  background-image: url('data:image/png;base64,');
}

.score-lose {
  background-image: url('data:image/png;base64,');
}

.item-des {
  margin-left: 16rpx;
}

.assessment-seperate-container {
  margin-top: 24rpx;
  background: #f8f8f8;
  padding: 30rpx 0;
}

.overall .item-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #262628;
}

.overall .score-get {
  background-image: url('data:image/png;base64,');
}

.overall .score-lose {
  background-image: url('data:image/png;base64,');
}

.assessment-seperate-container > .assessment-item {
  margin-top: 20rpx;
}

.assessment-seperate-container > .assessment-item:first-child {
  margin-top: 0;
}

.tags {
  margin-top: 32rpx;
  margin-right: -28rpx;
}

.tags-item {
  display: inline-block;
  padding: 0 30rpx;
  margin-right: 28rpx;
  margin-bottom: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #f52d56;
  border: 1px solid #f52d56;
  border-radius: 30rpx;
  box-sizing: content-box;
}

.content {
  margin-top: 12rpx;
  font-size: 28rpx;
  color: #666;
}

.images {
  margin-top: 24rpx;
}

.images > image {
  display: block;
  width:100%;
  margin-bottom: 32rpx;
}

.reply {
  padding: 32rpx 20rpx 20rpx;
  font-size: 24rpx;
  color: #999;
  background: #f8f8f8;
}

.staffInfo {
  margin-top: 24rpx;
  height: 140rpx;
  line-height: 140rpx;
  border-radius: 14rpx;
  box-shadow: 0 0 8rpx 0 rgba(0, 0, 0, 0.1);
}

.staffInfo-portrait {
  display: inline-block;
  margin-left: 22rpx;
  margin-right: 24rpx;
  vertical-align: middle;
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
}

.staffInfo-text {
  display: inline-block;
  vertical-align: middle;
  line-height: 54rpx;
}

.staffInfo-text-1 {
  font-size: 34rpx;
}

.staffInfo-text-2 {
  font-size: 24rpx;
  color: #333;
}

.productInfo {
  margin-top: 32rpx;
  height: 224rpx;
  background: #f8f8f8;
  overflow: hidden;
}

.productInfo-image {
  float: left;
  margin-top:32rpx;
  margin-left:32rpx;
  margin-right:20rpx;
  width: 160rpx;
  height: 160rpx;
}

.productInfo-right {
  margin-top: 32rpx;
  padding-right: 34rpx;
}

.right-1 {
  height:76rpx;
  font-size: 28rpx;
  color: #333;
}

.right-2 {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.right-2 > text {
  padding-left: 22rpx;
  background: url(data:image/png;base64,) no-repeat left 6rpx/100% auto;
  background-size: 22rpx 24rpx;
}

.specialPrice {
  margin-right: 8rpx;
  font-size: 32rpx;
  color: #f52d56;
}

.price {
  font-size: 24rpx;
  color: #9b9b9b;
  text-decoration: line-through;
}

.symbol {
  font-size: 24rpx;
}
