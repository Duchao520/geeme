/* pages/RC//pages/myEvaluation/myEvaluation.wxss */

.container {
  width: 100%;
  height: 100%;
  padding: 46rpx 32rpx 200rpx;
  flex: auto;
  overflow: scroll;
  -webkit-overflow-scrolling: touch;
}

/* 服务列表 */

.serviceList {
  width: 100%;
  height: 176rpx;
}

.serviceItem {
  padding: 32rpx 0 32rpx 32rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  box-shadow: 0 0 8rpx 0 rgba(174, 184, 229, 0.3);
  border-radius: 15rpx;
}

.serviceImage {
  width: 110rpx;
  height: 110rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
}

.serviceDes {
  max-width: 418rpx;
  height: 64rpx;
  color: #333;
  font-size: 24rpx;
  line-height: 32rpx;
  margin-bottom: 12rpx;
}

.servicePackage {
  color: #999;
  font-size: 24rpx;
}

.scores {
  margin-top: 60rpx;
}

.scores-all {
  font-size: 0;
  text-align: center;
}

.star {
  display: inline-block;
  margin-right: 28rpx;
  width: 54rpx;
  height: 52rpx;
  background-image: url('data:image/png;base64,');
  background-size: 100% 100%;
}

.star:last-child {
  margin-right: 0;
}

.all-des {
  margin-top: 14rpx;
  color: #333;
  font-size: 24rpx;
}

.scores-sperate {
  margin-top: 54rpx;
}

.scores-item {
  margin-top: 20rpx;
  padding: 0 34rpx;
}

.scores-item view {
  display: inline-block;
  vertical-align: middle;
}

.title {
  width: 132rpx;
  text-align: right;
  margin-right: 34rpx;
  font-size: 26rpx;
  color: #262628;
}

.des {
  float: right;
  text-align: right;
}

.des > view {
  font-size: 24rpx;
  color: #333;
}

.face {
  margin-right: 18rpx;
  width: 40rpx;
  height: 40rpx;
  background-image: url(data:image/png;base64,);
  background-size: 100% 100%;
}

.tags {
  margin-top: 60rpx;
}

.tags-title {
  color: #262628;
  font-size: 30rpx;
  font-weight: 600;
}

.tags-container {
  margin-top: 24rpx;
  margin-right: -32rpx;
}

.tag {
  display: inline-block;
  box-sizing: content-box;
  margin-right: 32rpx;
  margin-bottom: 30rpx;
  padding: 0 30rpx;
  height: 56rpx;
  line-height: 56rpx;
  border: 1px solid #f52d56;
  color: #f52d56;
  font-size: 24rpx;
  border-radius: 30rpx;
}

.content {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.photos {
  margin-top: 20rpx;
}

.photo {
  margin-right: 40rpx;
  margin-bottom: 20rpx;
  width: 180rpx;
  height: 180rpx;
  background: #000;
}

.reply {
  padding: 20rpx;
  margin-top: 20rpx;
  background: #f7f7fa;
  color: #666;
  font-size: 24rpx;
}

/* 服务者评分 */

.staff {
  width: 100%;
  height: auto;
  margin-top: 60rpx;
}

.staff-text {
  width: 100%;
  height: 42rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.staff-title {
  /* width: 100%; */
  line-height: 42rpx;
  text-align: left;
  color: #262628;
  font-size: 30rpx;
  font-weight: 600;
}

.staff-alt {
  color: #999;
  font-size: 24rpx;
}

.staff-container {
  margin-top: 20rpx;
  padding-left: 26rpx;
  padding-bottom: 60rpx;
  box-shadow: 0 0 8rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 16rpx;
  overflow: hidden;
}

.staff-body {
  margin-top: 24rpx;
}

.staff-body > view{
  display: inline-block;
}

.staff-avatar {
  display: inline-block;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 18rpx;
}

.staff-info{
  max-width: 400rpx;
}

.staff-name {
  font-size: 28rpx;
  color: #263238;
  line-height: 40rpx;
  margin-bottom: 8rpx;
}

.assessment-item {
  vertical-align: middle;
}

.star-container {
  display: inline-block;
  width: 300rpx;
}

.star-container > .star {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
