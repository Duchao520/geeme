/* 主体 */
.main{
  width: 100%;
  height: auto;
  padding:46rpx 32rpx 0 32rpx;
}
.title{
  width: 100%;
  height: 48rpx;
  font-size: 34rpx;
  color: black;
  line-height: 48rpx;
  text-align: left;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}

.title-icon{
  width: 100rpx;
  height: 100rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  background-size: 32rpx 30rpx;
  background-position-x: 62rpx;
}

.items{
  width: 100%;
  height: auto;
  padding-top: 32rpx;
  margin-right:-24rpx;
}

.item{
  display: inline-block;
  margin-right:24rpx;
  height:60rpx;
  line-height: 60rpx;
  padding: 0 22rpx;
  text-align: center;
  background-color: #F6F6F6;
  color: #BEBEBE;
  font-size: 24rpx;
  border-radius: 30rpx;
  margin-bottom: 40rpx;
}
