page{
  background:#f7f7f7;
}

.container {
  width: 100%;
  height: auto;
  padding-top: 20rpx;
  padding-bottom: 146rpx;
}

.packagelist {
  width: 100%;
  height: auto;
  background-color: white;
  padding-left: 38rpx;
}
.listitems{
  padding-right:38rpx;
}
.listitem {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  padding-left: 26rpx;
  position: relative;
  border-bottom: 4rpx solid #efeff4;
}
.listitem:last-child{
  border-bottom: 0;
}

.listitemicon {
  width: 22rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  background-position-y: 35rpx;
}

.listitemdes {
  width: 540rpx;
  height: 100%;
  color: #333;
  font-size: 28rpx;
  line-height: 90rpx;
}

.listitemcount {
  color: #333333;
  font-size: 24rpx;
}

.total {
  width: 100%;
  height: 98rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  border-top: 4rpx solid #efeff4;
  padding-right: 38rpx;
}

.totaltitle {
  color: #333333;
  font-size: 28rpx;
}

.totalnums {
  color: #F52D56;
  font-size: 33rpx;
  font-weight: 600;
}

.pay {
  width: 100%;
  height: auto;
}

.pay-header {
  width: 100%;
  line-height: 88rpx;
  padding-left: 30rpx;
  color: #333333;
  font-size: 28rpx;
  text-align: left;
}

.pay-body {
  width: 100%;
  height: auto;
  background-color: white;
  padding: 0 32rpx;
}

.payitem {
  width: 100%;
  height: 120rpx;
  line-height:120rpx;
  border-bottom: 1px solid rgba(239, 239, 244, 1);
  position: relative;
  
}
.payitem:last-child{
  border-bottom: 0;
}

.itemicon {
  display: inline-block;
  vertical-align: middle;
  margin-right:24rpx;
  width: 64rpx;
  height: 64rpx;
  background-size: 100% 100%;
}

.itemicon.icon-weixin{
  background-image: url(data:image/png;base64,);
}

.itemicon.wallet{
  background-image: url(data:image/png;base64,);
}

.itemicon.icon-card{
  background-image: url(data:image/png;base64,);
}

.itemname {
  display: inline-block;
  vertical-align: middle;
  line-height:normal;
  color: #666;
  font-size: 32rpx;
}

.warning1{
  font-size:32rpx;
  color:#aaa;
}

.warning2{
  margin-top:5rpx;
  font-size:24rpx;
  color:#f52d56;
}

.item-right{
  float:right;
  height:100%;
}

.item-right > view{
  display: inline-block;
  vertical-align: middle;
}

.icon-select {
  width: 40rpx;
  height: 40rpx;
  background-size:100% 100%;
}

.pay-footer {
  width: 100%;
  line-height: 102rpx;
  color: #999999;
  font-size: 24rpx;
  padding-left: 30rpx;

}

/* 支付按钮 */
.paybtn{
  width: 100%;
  height: 146rpx;
  background-color: white;
  position: fixed;
  bottom: 0;
  left: 0;
}
.btnitem{
  width: 684rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #F52D56;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 34rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
}
.disable-btnitem{
  width: 684rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #ccc;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 34rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
}

