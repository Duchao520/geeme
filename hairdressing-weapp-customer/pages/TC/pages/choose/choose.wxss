}
.choose-head{
  width: 100%;
  height: 100rpx;
  border-bottom: 2rpx solid #EBEBEB;
  padding:0 0 0 210rpx;
  overflow: hidden;
  position: relative;
}
.ch-people{
  width: 114rpx;
  height: 100rpx;
  color: rgba(170, 170, 170, 1);
  font-size: 28rpx;
  position: relative;
  float: left;
  text-align: center;
  line-height: 100rpx;
  margin-right: 120rpx;
}
.ch-people.active{
  color: #484848;
}
.ch-line{
  position: absolute;
  bottom: 0;
  left: -30rpx;
  margin: auto;
  width: 114rpx;
  height: 6rpx;
  background-color:#F52D56;
  transition: all .625s ease;
 
}
.ch-time{
  color: rgba(170, 170, 170, 1);
