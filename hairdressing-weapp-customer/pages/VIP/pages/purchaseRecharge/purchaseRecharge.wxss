.purchaseRecharge{
  padding-bottom:150rpx;
}

.card-kind{
  margin-top:60rpx;
}

.card-kind.bigCard{
  margin-top:0;
}

.kind-title {
  width: 100%;
  height: 80rpx;
  line-height:80rpx;
  padding: 0 32rpx;
  color: #262628;
  font-size: 40rpx;
  font-weight: 600;
  overflow:hidden;
}

.bigCard .kind-title{
  height:100rpx;
  line-height:100rpx;
}

.kind-title > view{
  display: inline-block;
}

.title-right{
  float:right;
  width:16rpx;
  height:100%;
  background: url(data:image/png;base64,) no-repeat center center;
  background-size:100% 30rpx;
}

.card-container {
  padding-left:32rpx;
  white-space: nowrap;
}

.card {
  position:relative;
  display: inline-block;
  width: 362rpx;
  height: 230rpx;
  border-radius: 15rpx;
  margin-right: 20rpx;
  background-size: 100% 100%;
  padding-top: 20rpx;
  color:white;
}

.bigCard .card{
  width:460rpx;
  height:292rpx;
  margin-right:30rpx;
}

.card-title{
  padding-left:20rpx;
  font-size:0;
  display: flex;
}

.bigCard .card-title{
  display: flex;
}

.card-logo {
  margin-right:8rpx;
  width: 46rpx;
  height: 46rpx;
  border-radius:50%;
  vertical-align: middle;
}

.bigCard .card-logo{
  margin-right:10rpx;
  width:56rpx;
  height:56rpx;
}

.bigCard .tag{
  width: 88rpx;
  height: 32rpx;
  border-radius: 30rpx;
  border: 1rpx solid #FFFFFF;
  color: #FFFFFF;
  font-size: 20rpx;
  line-height: 30rpx;
  text-align: center;
}

.tag{
  width: 88rpx;
  height: 32rpx;
  border-radius: 30rpx;
  border: 1rpx solid #FFFFFF;
  color: #FFFFFF;
  font-size: 20rpx;
  line-height: 30rpx;
  text-align: center;
}

.card-name {
  font-size:28rpx;
  margin-bottom: 4rpx;
}

.bigCard .card-name{
  font-size:36rpx;
}

.card-info{
  position:absolute;
  bottom:6rpx;
  width:100%;
  text-align: right;
  padding:0 14rpx;
}

.card-effect > text{
  padding:0 12rpx;
  height:26rpx;
  line-height:26rpx;
  font-size:20rpx;
  color:#333;
  border-radius:13rpx;
  background-color:#fff;
}

.card-price{
  font-size:32rpx;
}

.bigCard .card-price{
  font-size:40rpx;
}