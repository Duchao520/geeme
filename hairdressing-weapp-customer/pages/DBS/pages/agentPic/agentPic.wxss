.container{
  width: 100%;
  height: 520rpx;
  background: #F52D56;
  padding-top: 40rpx;
}
.canvas{
  display: block;
  margin: 0 auto;
  width: 343px;
  height: 610px;
  border-radius: 4px;
  position: absolute;
  left: -750rpx;
  opacity: 0;
}
.canvas-img{
  display: block;
  margin: 0 auto;
  width: 343px;
  height: 610px;
  border-radius: 4px;
  box-shadow: 0px 0px 6px 0px rgba(0, 0, 0, 0.24);
}
.shareBtn{
  display: block;
  width: 686rpx;
  height: 100rpx;
  border-radius: 60rpx;
  background: #F52D56;
  font-size: 36rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 100rpx;
  margin: 44rpx auto 0;
}
