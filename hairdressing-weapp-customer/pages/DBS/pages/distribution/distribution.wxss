.head{
  width: 100%;
  height: 500rpx;
  box-sizing: border-box;
  padding: 28rpx;
  box-shadow: 0px 2px 14px 0px rgba(174, 184, 229, 0.3);
}
.totalModel{
  width: 100%;
  height: 260rpx;
  border-radius: 8rpx;
  background: linear-gradient(45deg,#B965F9,#6A5DEE);
  box-sizing: border-box;
  padding: 36rpx 30rpx;
  position: relative;
}
.totalModel .pos-r{
  position: absolute;
  top: 52rpx;
  right: 0;
  width: 168rpx;
  height: 50rpx;
  background: rgba(255,255,255,.27);
  border-radius: 50rpx 0 0 50rpx;
  line-height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.recommended-icon {
  width: 30rpx;
  height: 100%;
  background: no-repeat center center/100% auto;
  background-size: 14rpx;
  color: #FFFFFF;
}

.totalModel .line{
  width: 2rpx;
  height: 62rpx;
  background: #FFFFFF;
}
.icon{
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto 20rpx;
}
.total-detail{
  width: 100%;  
  height: 310rpx;
  border-radius: 16rpx;
  box-sizing: border-box;
  padding: 42rpx 40rpx;
  background-color: rgba(255, 255, 255, 1);
  box-shadow: 0 4rpx 28rpx 0 rgba(174, 184, 229, 0.3);
}
.total-detail .line{
  width: 2rpx;
  height: 62rpx;
  background: #EEEEEE;
}