/* pages/UIC//pages/equityTransfer/equityTransfer.wxss */

.popup-container {
  position: absolute;
  top: 100rpx;
  left: 0;
  width: 100%;
}

/* 提现金额 */
.withdrawal-amount {
  width: 750rpx;
  height: 200rpx;
  border-bottom: 2rpx solid #EBEBEB;
}
.withdrawal-amount-info {
  width: 750rpx;
  padding-top: 30rpx;
}
.withdrawal-amount-info view:nth-child(1) {
  width: 558rpx;
  margin-left: 32rpx;
}
.withdrawal-amount-info view:nth-child(2) {
  padding: 0 32rpx;
  background: url(data:image/png;base64,) no-repeat center left;
  background-size: 24rpx 24rpx;
}
.withdrawal-amount-input {
  width: 686rpx;
  margin: 32rpx 32rpx 0;
  align-items: flex-end;
}

/* 提现金额详情 */
.withdrawal-amount-detail {
  width: 686rpx;
  margin: 20rpx auto 0;
}
.withdrawal-amount-detail view {
  width: 574rpx;
}
.withdrawal-amount-detail>view:nth-child(2) {
  width: 112rpx;
}

/* 银行账户信息 */
.withdrawal-bank {
  width: 750rpx;
  margin-top: 20rpx;
}
.withdrawal-bank-header {
  width: 750rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding-left: 32rpx;
  background: #F8F8F8;
}
.withdrawal-bank-input {
  width: 686rpx;
  height: 100rpx;
  margin-left: 32rpx;
  margin: 0 auto;
  border-top: 2rpx solid #EFEFF4;
}
.withdrawal-bank-input view {
  width: 100rpx;
}
.withdrawal-bank-input input {
  width: 586rpx;
}
.space {
  width: 750rpx;
  height: 20rpx;
  background: #F8F8F8;
}


/* 确认按钮 */
.withdrawal-submit {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
}
.withdrawal-btn {
  width: 684rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  background: #F52D56;
  margin: 20rpx 33rpx;
}
.bg-ccc {
  background: #ccc !important;
}