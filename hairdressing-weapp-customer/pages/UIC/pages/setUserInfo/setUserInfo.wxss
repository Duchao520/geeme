.container{
  width: 100%;
  min-height: 100vh;
  background-color: #F8F8F8;
  padding-top: 20rpx;
}
.avatar{
  width: 100%;
  height: 176rpx;
  padding: 0 32rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  line-height: 176rpx;
  color: #333333;
  font-size: 28rpx;
  align-items: center;
  background-color: white;
}
.avatar-left{
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}
.avatarTitle{
  margin-right: 88rpx;
}
.avatarImg{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  /* background-color: black; */
}
.moreicon{
  width: 50rpx;
  height: 100%;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  background-size: 12rpx;
  background-position-x: 40rpx;
}
.userInfo{
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  padding: 0 34rpx 0 32rpx;
  background-color: white;
}
.item{
  position:relative;
  height: 96rpx;
  line-height:96rpx;
  border-bottom: 1px solid #EFEFF4;
}
.item:last-child{
  border-bottom: 0;
}

.itemTitle{
  float:left;
  width:140rpx;
  height:100%;
  color: #333333;
  font-size: 28rpx;
} 

.content{
  display: block;
  height:96rpx;
  font-size:28rpx;
  color:#999;
}

.itemRight{
  position:absolute;
  right:0;
  top:0;
  width: 50rpx;
  height: 100%;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  background-size: 12rpx;
  background-position-x: 40rpx;
}
.button{
  width: 684rpx;
  height: 100rpx;
  margin: 40rpx auto 0;
  background-color: #F52D56;
  border-radius: 50rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 34rpx;
  color: white;
}