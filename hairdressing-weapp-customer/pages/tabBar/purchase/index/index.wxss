page{
  position:relative;
  min-height: 100vh;
}

#shop {
  width: 100%;
  padding: 28rpx 32rpx 0rpx 34rpx;
}

.shopname {
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.nameitem {
  width: 80%;
  color: rgba(72, 72, 72, 1);
  font-size: 44rpx;
  line-height: 60rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.nameitem > text{
  display: inline-block;
  vertical-align: middle;
}

.nameitem > text:first-child{
  margin-right:10rpx;
  max-width: 150rpx;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


.namefunc {
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: right;
}

.functext {
  color: rgb(153, 153, 153);
  font-size: 24rpx;
  margin-right: 8rpx;
}

.sh-icon {
  width: 12rpx;
  height: 100%;
  background: no-repeat center center/100% auto;
  background-position-y: 25rpx;
}

.shopsearch {
  margin:30rpx -32rpx;
  overflow:hidden;
}

.function {
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  margin-top: 50rpx;
  margin-bottom: 28rpx;
}

.function-item {
  width: 200rpx;
  height: 100%;
  text-align: center;
}

.function-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 0 auto 16rpx;
}

.function-text {
  color: rgba(51, 51, 51, 1);
  font-size: 26rpx;
  text-align: center;
}

.recommend-container{
  margin-bottom:14rpx;
}

.recommend-scroll-view{
  width:100%;
  white-space: nowrap;
}

.recommend-item{
  display: inline-block;
  margin-left:30rpx;
  padding-bottom:14rpx;
  width:270rpx;
  border-radius:8rpx;
  box-shadow: 0 0 8rpx 0 rgba(0, 0, 0, .1);
  overflow: hidden;
}

.recommend-item:last-child{
  margin-right:30rpx;
}

.recommend-image{
  height:270rpx;
}

.recommend-image > image{
  width:100%;
  height:100%;
}

.recommend-text{
  padding:0 10rpx;
}

.recommend-title{
  margin-top:10rpx;
  height:70rpx;
  color:#333;
  font-size:26rpx;
  white-space: normal;
}

.price-group{
  margin-top:10rpx;
  font-size:30rpx;
  color:#f52d56;
  font-weight: 600;
}

.price-shopPrice{
  margin-top:8rpx;
  color:#333;
  font-size:24rpx;
}

.word-symbol{
  display: inline-block;
  box-sizing: border-box;
  vertical-align: middle;
  width:24rpx;
  height:24rpx;
  line-height:24rpx;
  font-size:16rpx;
  text-align: center;
  border-radius:4rpx;
  font-weight: normal;
}

.price-group > .word-symbol{
  background: linear-gradient(to right, #ff3a31, #f138c9);
  color:#fff;
  vertical-align: 4rpx;
}

.price-shopPrice > .word-symbol{
  border: 1rpx solid #666;
  vertical-align: 2rpx;
}

.Service{
  width: 100%;
  height: auto;
  padding: 0 32rpx;
}
.Service-item{
  width: 100%;
  height: auto;
}

.s-title{
  height: 104rpx;
  line-height:104rpx;
}

.s-title-left{
  display: inline-block;
  color: #262628;
  font-size: 40rpx;
  font-weight: 600;
}

.s-title-right{
  float:right;
  width:18rpx;
  height:100%;
  background-size: 18rpx 28rpx;
  background-position: center center;
  background-repeat: no-repeat;
}

.s-contents{
  width: 100%;
  height: auto;
}