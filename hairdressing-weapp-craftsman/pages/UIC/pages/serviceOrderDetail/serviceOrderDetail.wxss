@import '/utils/wxss/icon.wxss';

page {
  background-color: #f7f7f7;
}

.consumptiondetail {
  width: 100%;
  padding: 46rpx 32rpx 200rpx;
}

.customer{
  position:relative;
  background:#fff;
  height:124rpx;
  line-height:124rpx;
}

.customer > view{
  display: inline-block;
  vertical-align: middle;
}

.customer-text{
  margin-left:10rpx;
  line-height: normal;
}

.customer-text > view:first-child{
  font-size:28rpx;
  color:#263238;
}

.customer-text > view:last-child{
  font-size:24rpx;
  color:#999;
}

.customer-button{
  position: absolute;
  top:62rpx;
  right:20rpx;
  margin-top:-18rpx;
  box-sizing: content-box;
  display: inline-block;
  width:112rpx;
  text-align: center;
  height:36rpx;
  line-height:36rpx;
  font-size:20rpx;
  color:#f52d56;
  border-radius:18rpx;
  border: 0.5px solid #f52d56;
}

.topLine {
  width: 710rpx;
  height: 24rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 999;
}

.container {
  position:relative;
  width: 686rpx;
  height: auto;
  margin-top:40rpx;
}

/* 头部 */

.header {
  width: 100%;
  height: auto;
  background-color: white;
  padding: 28rpx 32rpx 0;
  position: relative;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}

.header-left {
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
}

.storeImg {
  width: 76rpx;
  height: 76rpx;
  margin-right: 12rpx;
  border-radius:8rpx;
}

.storeInfo {
  margin-bottom: 10rpx;
}

.storeName {
  width: 420rpx;
  color: #333;
  font-size: 28rpx;
}

.consumptionTime {
  color: #999;
  font-size: 24rpx;
}

.status {
  width: 92rpx;
  height: 38rpx;
  color: white;
  font-size: 24rpx;
  background-color: #f52d56;
  text-align: center;
  line-height: 38rpx;
  border-radius: 4rpx;
}

.status.yes {
  background-color: #00cf82;
}

/* 凹槽 */

.bump {
  width: 100%;
  height: 40rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}

/* 服务信息 */

.serviceContent {
  width: 100%;
  height: auto;
  padding: 0 32rpx 32rpx;
  background-color: white;
}

.serviceItem {
  width: 100%;
  height: auto;
  margin-top: 24rpx;
}

.serviceItem:first-child {
  margin-top: 0;
}

.serviceOne {
  width: 100%;
  height: 120rpx;
  position: relative;
  margin-bottom: 26rpx;
}

.serviceImg {
  float: left;
  width: 120rpx;
  height: 120rpx;
  margin-right: 14rpx;
  background-color: black;
}

.serviceName {
  height: 40rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.serviceNameLeft {
  color: #333;
  font-size: 28rpx;
  height:34rpx;
  line-height:34rpx;
}

.serviceNameLeft > text{
  margin-left:10rpx;
  display: inline-block;
  vertical-align: top;
  width:76rpx;
  height:34rpx;
  line-height:34rpx;
  font-size:24rpx;
  text-align: center;
  background-color:rgba(245, 45, 86, 0.1);
  color:#f52d56;
  border:1px solid #f52d56;
}

.serviceNameLeft > text.blue{
  color:#38476c;
  background-color: rgba(56, 71, 108, 0.1);
  border: 1px solid #38476c;
}

.serviceNameright {
  color: #333;
  font-size: 24rpx;
}

.servicePackage {
  color: #999;
  font-size: 24rpx;
  margin-bottom: 6rpx;
}

.staffPeople {
  color: #999;
  font-size: 24rpx;
  margin-right: 40rpx;
  margin-top:10rpx;
  display: flex;
  flex-wrap: wrap;
}

.serviceCount {
  position: absolute;
  bottom: 0;
  right: 0;
  color: #999;
  font-size: 24rpx;
}

.serviceTwo {
  color:#999;
  font-size:24rpx;
  margin-bottom: 20rpx;
}

.discountBox {
  height: auto;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  margin-top: 16rpx;
}

.discountBox:first-child {
  margin-top: 0;
}

.serviceThree {
  width: 100%;
  height: auto;
  padding-bottom: 24rpx;
  border-bottom: 2rpx dashed rgba(239, 239, 244, 1);
}

.payPrice {
  color: #333;
  font-size: 24rpx;
  text-align: right;
  margin-bottom: 16rpx;
}

.orderType {
  color: #333;
  font-size: 24rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-end;
}

.orderTypeName {
}

.line {
  color: #979797 100%;
  margin: 0 20rpx;
}

.payStatus {
}

/* 代付金额 */

.waitPay {
  width: 100%;
  padding-top: 16rpx;
  min-height: 224rpx;
  color: #333;
  font-size: 24rpx;
  border-bottom: 2rpx dashed rgba(239, 239, 244, 1);
}

/* 订单信息 */

.orderInfo {
  width: 100%;
  padding-top:16rpx;
}

.orderSerial {
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.orderSerial:last-child {
  margin-bottom: 0;
}

.orderText {
  color: #999;
  font-size: 24rpx;
}

.orderNumber {
  color: #333;
  font-size: 24rpx;
}

/* 底部按钮 */

.button {
  width: 100%;
  padding: 30rpx 0;
  position: fixed;
  bottom: 0;
  right: 0;
  background-color: #fff;
}

.calculate {
  width: 684rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #f52d56;
  color: white;
  font-size: 34rpx;
  text-align: center;
  line-height: 100rpx;
  margin: 0 auto;
}

.calculate.unable{
  background-color: #c8c7cc;
}

.station-container{
  margin-right:20rpx;
  display: inline-block;
}

.station-container > text::after{
  content: '/';
}

.station-container > text:last-child::after{
  content:'';
}

.station-symbol{
  vertical-align: top;
  display: inline-block;
  margin-right: 8rpx;
  width: 30rpx;
  height:30rpx;
  text-align: center;
  line-height: 30rpx;
  border-radius: 50%;
  background: #ff6d61;
  color:#fff;
  font-size:20rpx;
}