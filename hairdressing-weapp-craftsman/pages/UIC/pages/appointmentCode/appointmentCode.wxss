.header-bg{
  position:absolute;
  top:0;
  left:0;
  z-index:-1;
  width:900rpx;
  margin-left:-75rpx;
  height:195rpx;
  background: linear-gradient(to bottom,#5782ff, #4ae7f2);
  border-radius: 50%/0 0 100% 100%;
}

.appointmentCode {
  width: 100%;
  height: auto;
}

.appointmentCodeItem {
  width: 684rpx;
  padding: 40rpx 40rpx 60rpx;
  min-height: 1040rpx;
  margin: 82rpx auto;
  border-radius: 8rpx;
  box-shadow: 0 0 20rpx 0 rgba(0, 0, 0, 0.2);
  background:#fff;
}

.staffMoudle {
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}

.staffAvatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.staffName {
  color: #263238;
  font-size: 34rpx;
  margin-bottom: 14rpx;
}

.staffStore {
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  color: #999;
  font-size: 24rpx;
}

.addressIcon {
  width: 18rpx;
  height: 32rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  margin-right: 4rpx;
}

.addressText {
}

.codeImage {
  display: block;
  width: 604rpx;
  height: 604rpx;
  margin: 40rpx auto;
}

.codeMessage {
  color: #999;
  font-size: 28rpx;
  text-align: center;
}

.buttons {
  text-align: center;
  width: 100%;
  height: auto;
  margin-top: 60rpx;
}

.buttons > view{
  display: inline-block;
  width: 250rpx;
  height: 80rpx;
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
}

.buttons-poster{
  margin-right:44rpx;
  background:#f52d56;
  color:#fff;
}

.buttons-save {
  border: 1px solid #f52d56;
  color: #f52d56;
}

.canvas{
  position: fixed;
  left:1000px;
  /* z-index: 2;
  left:0; */
  top:0;
  width:375px;
  height:667px;
}
