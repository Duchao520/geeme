.container {
  width: 100%;
  height: auto;
  background-color: #f8f8f8;
  padding: 20rpx 0;
}

.func {
  width: 100%;
  height: auto;
  padding: 0 32rpx;
  background-color: white;
}

.f-phone {
  width: 100%;
  height: 96rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #efeff4;
}

.f-text {
  line-height: 96rpx;
  color: #333;
  font-size: 28rpx;
}

.f-password {
  width: 100%;
  height: 96rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #efeff4;
}

.f-address {
  width: 100%;
  height: 96rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #efeff4;
}

.f-a-item {
  height: 96rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-end;
}

.noset {
  line-height: 96rpx;
  color: #999;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.f-opinion {
  width: 100%;
  height: 96rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #efeff4;
}

.f-shopinfo {
  width: 100%;
  height: 96rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}

.servicephone {
  height: 96rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-end;
}

.opin-num {
  line-height: 96rpx;
  color: #999;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.icon {
  width: 11rpx;
  height: 100%;
  background: url(data:image/png;base64,)no-repeat center center/100% auto;
}


