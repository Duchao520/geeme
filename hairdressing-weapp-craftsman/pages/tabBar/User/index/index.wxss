.User {
  width: 100%;
  height: auto;
}

/* 用户信息 */

.UserHeader {
  width: 686rpx;
  height: 222rpx;
  margin: 32rpx auto;
  box-shadow: 0 0 8rpx 0 rgba(174, 184, 229, 0.3);
  border-radius: 8rpx;
  padding: 0rpx 22rpx 0;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  position: relative;
}

.userAvatar {
  padding-top: 20rpx;
  margin-right: 16rpx;
}

.userAvatar image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}

.userContent {
  max-width:450rpx;
  padding-top: 38rpx;
}

.userName {
  color: #263238;
  font-size: 36rpx;
}

.userNickName {
  color: #999;
  font-size: 24rpx;
  margin: 10rpx 0 0;
  white-space: nowrap;
  overflow:scroll;
}

.userData {
  margin-top: 32rpx;
  font-size: 24rpx;
  color: #333;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
}

.userDataItem {
  margin-right: 44rpx;
}

.userDataItem text {
  color: #999;
  font-size: 24rpx;
}

/* 功能模块 */

.funcMoudle {
  width: 100%;
  height: auto;
  margin-top: 34rpx;
}

.funcMoudleItem {
  width: 100%;
  height: 160rpx;
  position: relative;
  padding: 0 42rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  box-shadow: 0 0 28rpx 0 rgba(174, 184, 229, 0.3);
  margin-bottom: 40rpx;
}

.icon-serviceList {
  width: 60rpx;
  height: 160rpx;
  margin-right: 26rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}

.icon-evaluation {
  width: 60rpx;
  height: 160rpx;
  margin-right: 26rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}

.icon-collection {
  width: 60rpx;
  height: 160rpx;
  margin-right: 26rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}

.icon-accountSet {
  width: 60rpx;
  height: 160rpx;
  margin-right: 26rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}

.moreIcon.small {
  width: 12rpx;
  height: 160rpx;
  position: absolute;
  right: 42rpx;
  top: 0;
  bottom: 0;
  margin: auto;
}

.moreIcon.big {
  position:absolute;
  right:20rpx;
  top:50rpx;
  width:16rpx;
  height:28rpx;
  background-size:100% 100%;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
