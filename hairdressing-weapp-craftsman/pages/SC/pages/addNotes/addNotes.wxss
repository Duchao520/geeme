@import '/utils/wxss/icon.wxss';
.releaseIndex{
  width: 100%;
  height: auto;
  padding: 34rpx 0 200rpx 32rpx;

}
/* 图片模块 */
.releaseImageMoudle{
  width: 100%;

  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}
movable-view{
  width: 200rpx;
  height: 200rpx;
  background: red;
}
.releaseImageBox{
  width: 200rpx;
  height: 200rpx;
  margin-right: 32rpx;
  margin-bottom: 32rpx;
  position: relative;
}
.releaseImageMoudle image{
  width: 200rpx;
  height: 200rpx;
}
.closeIcon{
  width: 80rpx;
  height: 80rpx;
  background: no-repeat center center/100% auto;
  background-size: 40rpx 40rpx;
  position: absolute;
  right: -40rpx;
  top: -40rpx;
}
.addImage{
  width: 200rpx;
  height: 200rpx;
  position: relative;
  border: 2rpx solid #C8C7CC;
    margin-right: 32rpx;
  margin-bottom: 32rpx;
}
.cross{
  width: 80rpx;
  height: 4rpx;
  background: #C8C7CC;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  margin: auto;
}
.vertical{
  width: 4rpx;
  height: 80rpx;
  background: #C8C7CC;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  margin: auto;
}
/* 文字模块 */
.releaseTextMoudle{
  font-size: 28rpx;
  padding-right: 32rpx;
  margin-top: 20rpx;
}

/* 功能模块 */
.releaseTextFuncMoudle{
  width: 100%;
  height: auto;
  padding-right: 32rpx;
}
.funcAddLabel{
  border-bottom: .5px solid #E6E6E6;
}
.funcAddLabel:first-child{
  border-top: .5px solid #E6E6E6;
}

.funcAddLabel-1{
  height:100rpx;
  position:relative;
}

.funcAddLabel-2{
  margin-top:-20rpx;
  padding-bottom:20rpx;
  font-size:0;
}

.funcAddLabel-2 > text{
  margin-right:10rpx;
  font-size:24rpx;
  color:#f52d56;
}

.funcAddLabel-2 > image{
  width:80rpx;
  height:80rpx;
  border-radius:10rpx;
  margin-right:10rpx;
}

.funcLabelIcon{
  display: inline-block;
  vertical-align: middle;
  width: 40rpx;
  height: 100rpx;
  margin-right: 18rpx;
  background: no-repeat center center/100% auto;
} 
.funcLabelIcon.funcLabelIcon-addLabel{
  background-image: url(data:image/png;base64,);
}
.funcLabelIcon.funcLabelIcon-addProduct{
  background-image: url(data:image/png;base64,);
}
.funcLabelIcon.funcLabelIcon-addOrder{
  background-image:url('data:image/png;base64,');
}
.funcLabelName{
  display: inline-block;
  color: #45454D;
  font-size: 30rpx;
  vertical-align: middle;
}
.moreIcon{
  width: 12rpx;
  height: 100rpx;
  position: absolute;
  right: 0;
  top: 0;
  margin: auto;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}

.labels{
  height:70rpx;
}

.button{
  width: 684rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-top: 30rpx;
  color: white;
  font-size: 34rpx;
  text-align: center;
  line-height: 100rpx;
  background: #F62B5D;
  padding: 0;
}
textarea{
  width: inherit;
}