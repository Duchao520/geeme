Page{
  background:white;
}

.dynamicComment{
  padding-bottom:400rpx;
}

.comment-container{
  margin:0 32rpx;
  padding:32rpx 0;
  border-bottom:1px solid #ebebeb;
}

.comment-header{
  position:relative;
  height:140rpx;
  line-height:140rpx;
}

.header-avatar{
  display: inline-block;
  margin-right:20rpx;
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.header-info{
  display: inline-block;
  vertical-align: middle;
  line-height:50rpx;
}

.header-info_1{
  font-size:30rpx;
}

.header-info_2{
  font-size:24rpx;
  color:#9b9b9b;
}

.header-thumb{
  position:absolute;
  min-width: 30rpx;
  height:28rpx;
  line-height:28rpx;
  top:40rpx;
  right:0;
  padding-left:35rpx;
  color:#666;
  font-size:28rpx;
  background: url('data:image/png;base64,') no-repeat left center;
  background-size: 28rpx 28rpx;
}

.comment-main{
  padding-left:100rpx;
}

.main-content{
  font-size:28rpx;
  color:#666;
}

.dynamicComment-bottom{
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  height:164rpx;
  background:#fff;
  border-top:1px solid #ebebeb;
}

.dynamicComment-bottom-container{
  position:relative;
  height:80rpx;
  line-height:80rpx;
  margin-top:16rpx;
  padding:0 32rpx;
  font-size:28rpx;
}

.dynamicComment-bottom-input{
  display: inline-block;
  box-sizing: border-box;
  width:588rpx;
  height:80rpx;
  padding-left:87rpx;
  padding-right:40rpx;
  border-radius:40rpx;
  vertical-align: middle;
  background: url('data:image/png;base64,') no-repeat 28rpx center;
  background-size: 35rpx 35rpx;
  background-color:#f8f8f8;
}

.dynamicComment-bottom-button{
  margin-left:40rpx;
  display: inline-block;
  vertical-align: middle;
  color:#f52d56;
}