/* 外部样式类 */

.input-view {
  padding-left: 36rpx !important;
}

.releaseAddlabel {
  width: 100%;
  height: auto;
}

/* 头部 */

.releaseAddlabel-head {
  width: 100%;
  padding: 0 134rpx 0 32rpx;
  position: relative;
}

.r-h-add {
  line-height: 72rpx;
  color: #f52d56;
  font-size: 28rpx;
  margin-left: 46rpx;
  position: absolute;
  right: 32rpx;
  top: 0;
  bottom: 0;
  margin: auto;
}

/* 主体 */

.releaseAddlabel-body {
  width: 100%;
  height: auto;
  margin-top: 40rpx;
  border-top: 2rpx solid #ebebeb;
  padding: 0 32rpx;
}

.r-b-already {
}

.r-b-already-title {
  color: #666;
  font-size: 28rpx;
  padding: 24rpx 0 24rpx 44rpx;
  position: relative;
}

.r-b-already-title::after {
  content: '';
  display: block;
  width: 32rpx;
  height: 32rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

.r-b-already-list {
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.r-b-already-listItem {
  height: 60rpx;
  border-radius: 50rpx;
  line-height: 60rpx;
  border: 1rpx solid #aaa;
  padding: 0 30rpx;
  margin-right: 32rpx;
  margin-bottom: 32rpx;
  font-size: 24rpx;
  color: #999;
}

.r-b-already-listItem.active {
  color: #f52d56;
  border: 1rpx solid #f52d56;
}

.r-b-recommended {
  width: 100%;
  height: auto;
  margin-top: 26rpx;
}

.r-b-recommended-title {
  color: #f52d56;
  font-size: 28rpx;
  padding: 24rpx 0 24rpx 44rpx;
  position: relative;
}

.r-b-recommended-title::after {
  content: '';
  display: block;
  width: 32rpx;
  height: 32rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

.r-b-recommended-list {
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.r-b-recommended-listItem {
  height: 60rpx;
  border-radius: 50rpx;
  line-height: 60rpx;
  border: 1rpx solid #aaa;
  padding: 0 30rpx;
  margin-right: 32rpx;
  margin-bottom: 32rpx;
  color: #aaa;
  font-size: 24rpx;
}

.r-b-recommended-listItem.active {
  color: #f52d56;
  border: 1rpx solid #f52d56;
}

/* 底部按钮 */
.bottom-fixed{
  width: 100%;
  height: 140rpx;
  background-color: white;
  position: fixed;
  bottom: 0;
  left: 0;
}
.bottom-button{
  width: 684rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #F52D56;
  text-align: center;
  line-height: 100rpx;
  font-size: 34rpx;
  color: white;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
