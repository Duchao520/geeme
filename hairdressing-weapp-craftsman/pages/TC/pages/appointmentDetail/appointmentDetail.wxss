@import '/utils/wxss/icon.wxss';
.grey-line{
  height:20rpx;
  background: #f8f8f8;
}

page{
  padding-bottom: 150rpx;
}

.appointmentDetail {
  width: 100%;
  height: auto;
  position: relative;
}

/* 头部 */

.header {
  width: 100%;
  height: auto;
  padding: 0 32rpx;
  background: white;
}

.time {
  width: 100%;
  height: 112rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 12rpx 20rpx 18rpx 20rpx;
}

.time-title {
  width: 100%;
  line-height: 34rpx;
  color: #666;
  font-size: 24rpx;
  text-align: left;
  margin-bottom: 14rpx;
}

.time-item {
  width: 100%;
  height: 36rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}

.t-i-left {
  height: 34rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
}

.t-i-icon {
  width: 20rpx;
  height: 100%;
  margin-right: 6rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}

.t-i-text {
  color: #f52d56;
  font-size: 24rpx;
}

.t-i-button {
  width: 100rpx;
  height: 36rpx;
  border: 1rpx solid #f52d56;
  border-radius: 22rpx;
  color: #f52d56;
  font-size: 20rpx;
  line-height: 30rpx;
  text-align: center;
}

.detailHeader {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: #f8f8f8;
  position: relative;
  padding: 0 20rpx 0 70rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}

.detail-h-l {
  color: #f52d56;
  font-size: 28rpx;
}

.detail-h-r {
  padding: 0 16rpx;
  border-radius: 50rpx;
  border: 1rpx solid #f52d56;
  color: #f52d56;
  font-size: 20rpx;
  line-height: 36rpx;
}

.detailIcon {
  width: 32rpx;
  height: 32rpx;
  background: black;
  position: absolute;
  left: 26rpx;
  top: 0;
  bottom: 0;
  margin: auto;
}

.customerContent {
  width: 100%;
  height: 124rpx;
  padding: 0 26rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 0 8rpx 0 rgba(0, 0, 0, 0.1);
  margin-top: 20rpx;
}

.customer-l {
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
}

.customerText {
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}

.customerName {
  color: #263238;
  font-size: 28rpx;
}

.customerLevel {
  width: 76rpx;
  height: 34rpx;
  color: white;
  font-size: 20rpx;
  text-align: center;
  line-height: 34rpx;
}

.customerMobile {
  color: #999;
  font-size: 24rpx;
  margin-top: 2rpx;
}

.customer-r {
  padding: 0 16rpx;
  border-radius: 50rpx;
  border: 1rpx solid #f52d56;
  color: #f52d56;
  font-size: 20rpx;
  line-height: 36rpx;
}

/* 服务列表 */
.service-container{
  margin-top:40rpx;
  padding:0 32rpx;
  background:#fff;
  padding-bottom:40rpx;
}

.service {
  background-color: #f8f8f8;
  padding-top: 22rpx;
  padding-bottom:24rpx;
  border-radius: 8rpx;
}

.service-title {
  width: 100%;
  height: 36rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 0 18rpx;
}

.service-text {
  color: #666;
  font-size: 24rpx;
}

.service-button {
  width: 100rpx;
  height: 36rpx;
  border-radius: 22rpx;
  border: 1rpx solid #f52d56;
  color: #f52d56;
  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
}

.service-item {
  width: 100%;
  padding: 24rpx 10rpx 24rpx 30rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  border-bottom:1px solid #efeff4;
}

.service-item:last-child{
  padding-bottom:0;
  border: none;
}

.serviceimage {
  width: 160rpx;
  height: 160rpx;
  border-radius: 6rpx;
}

.servicedes {
  width: 458rpx;
  height: 72rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 36rpx;
  margin-bottom: 10rpx;
}

.packageinfo {
  color: #7e7e7e;
  font-size: 24rpx;
  margin-bottom: 6rpx;
}

.total > view{
  display: inline-block;
}

.price {
  color: #f52d56;
  font-size: 30rpx;
  font-weight: 600;
  margin-right: 20rpx;
}

.count {
  color: #7e7e7e;
  font-size: 24rpx;
  line-height: 39rpx;
}
/* 合计 */

.totalInfo {
  width: 100%;
  height: auto;
  padding: 0 32rpx;
  background: white;
}

.totalItem {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #efeff4;
}

.totalItem:last-child {
  border: 0;
}

.total-l {
  color: #666;
  font-size: 28rpx;
}

.total-r {
  color: #333;
  font-size: 30rpx;
}

.symbol{
  font-size:24rpx;
}

/* 备注信息 */

.notes {
  width: 100%;
  height: auto;
}

.notesItems {
  width: 100%;
  height: auto;
  background: white;
  padding: 0 32rpx;
}

.customerNotesItem {
  position:relative;
  width: 100%;
  padding:25rpx 0;
  /* border-bottom: 1rpx solid #efeff4; */
  overflow: hidden;
}

.customerItem-l {
  position: absolute;
  left:0;
  top:50%;
  margin-top:-20rpx;
  vertical-align: middle;
  color: #262628;
  font-size: 28rpx;
}

.customerItem-r {
  float:right;
  text-align: right;
  max-width: 400rpx;
  color: #333;
  font-size: 28rpx;
}

.changeInput {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}

.changeTitle {
  color: #262628;
  font-size: 28rpx;
}

.changeInput input {
  width: 450rpx;
  height: 90rpx;
  font-size: 28rpx;
}

.notesMoreIcon {
  width: 12rpx;
  height: 90rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  position: absolute;
  right: 0rpx;
  bottom: 0;
}

/* 底部按钮 */

.bottomButton {
  width: 100%;
  height: 120rpx;
  position: fixed;
  right: 0;
  bottom: 0;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  background: white;
  z-index: 1;
  border-top: 2rpx solid #efeff4;
}

.bottomButton-left {
  padding-left: 30rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}

.bottomButton-l-title {
  color: #999;
  font-size: 34rpx;
  margin-right: 12rpx;
}

.bottomButton-l-totalPrice {
  color: #f52d56;
  font-size: 40rpx;
}

.bottomButton-l-totalPrice text {
  font-size: 24rpx;
}

.bottomButton-right {
  width: 240rpx;
  height: 120rpx;
  background: #f52d56;
  font-size: 34rpx;
  text-align: center;
  line-height: 120rpx;
  color: white;
}

/* 修改时间底部按钮 */

.updateTimeContent {
  width: 100%;
  height: auto;
  padding-bottom: 143rpx;
}

.updateDate {
  width: 100%;
  height: auto;
  padding: 44rpx 38rpx 0rpx 38rpx;
}

.updateTime {
  width: 100%;
  height: auto;
  padding: 68rpx 32rpx 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.timeItem {
  width: 148rpx;
  height: 70rpx;
  color: white;
  font-size: 24rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 4rpx;
  border: 1rpx solid rgba(193, 192, 201, 1);
  margin-bottom: 30rpx;
}

.updateBottomButtons {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 999;
  border-top: 2rpx solid #efeff4;
}

.updateBottom-left {
  padding-left: 32rpx;
  color: #999;
  font-size: 28rpx;
}

.updateBottom-left text {
  color: #333;
  font-size: 28rpx;
}

.updateBottom-right {
  width: 238rpx;
  height: 120rpx;
  background: #f52d56;
  font-size: 34rpx;
  color: white;
  text-align: center;
  line-height: 120rpx;
}

.page-footer{
  position: fixed;
  left:0;
  bottom:0;
  width:100%;
  height:120rpx;
  line-height:120rpx;
  font-size:34rpx;
  background-color:#fff;
  border-top: 1px solid #efeff4;
  z-index:10;
}

.footer-button{
  float:right;
  width:194rpx;
  height:100%;
  text-align: center;
  background:#f52d56;
  color:#fff;
}

.footer-button.btn-2{
  background:#FF7E99;
}
/* 以下为新增 */
.timeButtons{
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  right: 0;
  border-top: 2rpx solid #EFEFF4;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  background: white;
}
.timeButtons-left{
  padding-left: 16rpx;
  line-height: 120rpx;
  font-size: 28rpx;
}
.timeButtons-right{
  width: 238rpx;
  height: 120rpx;
  background-color: #F52D56;
  text-align: center;
  line-height: 120rpx;
  font-size: 34rpx;
  color: white;
}
