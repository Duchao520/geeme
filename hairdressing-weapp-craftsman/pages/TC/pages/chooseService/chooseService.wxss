.note {
  width: 100%;
  height: auto;
  /* padding: 0 32rpx; */
  overflow: hidden;
  position: relative;
}

.notetitle {
  width: 100%;
  height: 102rpx;
  padding-top: 40rpx;
  color: #262628;
  font-size: 30rpx;
  text-align: left;
}

.notearea {
  width: 100%;
  height: auto;
  position: relative;
  border-radius: 8rpx;
  /* padding-left: 26rpx; */
