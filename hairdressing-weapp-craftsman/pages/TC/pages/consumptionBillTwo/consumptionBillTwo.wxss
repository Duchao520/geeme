@import '/utils/wxss/icon.wxss';
.consumptionBillTwo{
  width: 100%;
  height: auto;
  padding: 0rpx 32rpx 250rpx;
}
.consumptionItem{
  width: 100%;
  height: auto;
  padding-top: 32rpx;
}

/* 服务相关模块 */
.serviceMoudle{
  width: 100%;
  margin-bottom:30rpx;
  padding: 70rpx 30rpx 36rpx;
  position: relative;
  background: #F8F8F8;
}
.consumption-title{
  color: #666666;
  font-size: 24rpx;
  position: absolute;
  left: 18rpx;
  top: 12rpx;
}
.serviceItem{
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}
.serviceItem-left{
  width: 160rpx;
  height: 160rpx;
  background: black;
  margin-right: 20rpx;
}
.serviceItem-left image{
  width: 160rpx;
  height: 160rpx;
}
.serviceItem-right{
  flex: auto;
}
.serviceDes{
  height:72rpx;
  color: #333333;
  font-size: 28rpx;
}
.specificationInfo{
  margin-top: 10rpx;
  color: #7E7E7E;
  font-size: 24rpx;
}
.specificationPrice{
  margin-top:10rpx;
  color: #F52D56;
  font-size: 30rpx;
  font-weight: 600;
}
.specificationPrice text{
  font-size: 20rpx;
}

/* 备注 */
.notes{
  width: 100%;
  padding:24rpx 0;
  font-size:28rpx;
  border-top: 1px solid #efeff4;
}

.notes-title{
  float:left;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.notes > input{
  display: block;
}

.page-footer{
  position: fixed;
  left:0;
  bottom:0;
  width:100%;
  height:120rpx;
  line-height:120rpx;
  font-size:34rpx;
  background-color:#fff;
  border-top: 1px solid #efeff4;
  z-index:10;
}

.footer-button{
  float:right;
  width:240rpx;
  height:100%;
  text-align: center;
  background:#f52d56;
  color:#fff;
}

/* 以下为新增 */
.station-title{
  height:90rpx;
  line-height:90rpx;
  color:#333;
  font-size:28rpx;
  background: no-repeat right center;
  background-size:12rpx 20rpx;
  border-top: 1px solid #efeff4;
}

.station-main{
  margin-top: -20rpx;
  padding-bottom:30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.server-popup-main{
  padding: 0 32rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.server-box{
  position: relative;
  margin-top: 20rpx;
  width:332rpx;
  height:100rpx;
  border-radius:8rpx;
  border: 1px solid #efeff4;
  display: flex;
  align-items: center;
}

.server-box.selected{
  border: 4rpx solid #F52D56;
  box-shadow: 0 0 8rpx 0 rgba(245, 45, 86, .5);
}

.selected-icon{
  position: absolute;
  bottom: -2rpx;
  right: -2rpx;
  width: 84rpx;
  height: 54rpx;
  background: no-repeat center center/100% auto;
  background-position: 9rpx 4rpx;
  z-index: 999
}

.server-portrait{
  position: relative;
  display: inline-block;
  margin-left:10rpx;
  width: 80rpx;
  height:80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.server-portrait > image{
  width: 100%;
  height:100%;
}

.server-ratio{
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  left:0;
  top:0;
  width: 100%;
  height:100%;
  background-color: rgba(0, 0, 0, .3);
  color:#fff;
  font-size:24rpx;
}

.server-info{
  max-width: 220rpx;
  margin-left:12rpx;
}

.server-info > .server-name{
  color:#262628;
  font-size:30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.server-info > .server-level{
  margin-top:6rpx;
  max-width: 120rpx;
  color:#9b9b9b;
  font-size:24rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.server-chosen{
  position: absolute;
  bottom:10rpx;
  right:10rpx;
  width: 68rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  border-radius: 4rpx;
}

.server-chosen.yes{
  background-color: #f52d56;
  color:#fff;
  font-size:24rpx;
}

.server-chosen.no{
  background-color:#f4f4f4;
  color:#ccc;
  font-size:20rpx;
}

.hidden-input-cover{
  position: fixed;
  left:0;
  top:0;
  width:100%;
  height:100vh;
  background-color: rgba(0, 0, 0, .5);
  opacity: 0;
  z-index: -1;
}

.hidden-input-cover.active{
  opacity: 1;
  z-index: 999;
  transition: opacity .625s ease;
}

.hidden-input{
  position: absolute;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  left:0;
  bottom:0;
  width:100%;
  height:100rpx;
  background-color: #fff;
}

.hidden-input.active{
  bottom:120rpx;
}

.hidden-input > input{
  box-sizing: border-box;
  padding:0 32rpx;
  width: 600rpx;
  height:72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  background-color: #f8f8f8;
  color: #333;
  font-size:26rpx;
}

.hidden-input-button{
  width: 120rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background-color: #3778f6;
  color:#fff;
  font-size:28rpx;
  border-radius: 8rpx;
}

.grey-line{
  margin-left:-32rpx;
  margin-right:-32rpx;
  height: 20rpx;
  background-color: #f8f8f8;
}