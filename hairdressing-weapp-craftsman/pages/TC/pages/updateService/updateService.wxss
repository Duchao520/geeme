/* 发型师信息 */

.container {
  width: 100%;
  height: auto;
  padding: 28rpx 32rpx 200rpx;
} 

.header {
  width: 100%;
  padding: 24rpx 26rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  box-shadow: 0 0 8rpx 0 rgba(0, 0, 0, 0.1);
  position: relative;
}

.hairavatar {
  width: 96rpx;
  height: 96rpx;
  background: no-repeat center center/100% auto;
  margin-right: 20rpx;
  border-radius: 50%;
}

.hairname {
  line-height: 48rpx;
  color: #263238;
  font-size: 34rpx;
}

.hairlevel {
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}

.hl-title {
  display: inline-block;
  color: #333;
  line-height: 56rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
}

.hairaddress {
  height: 32rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
}

.ha-icon {
  width: 18rpx;
  height: 100%;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  margin-right: 4rpx;
}

.ha-text {
  color: #999;
  font-size: 24rpx;
}

.page-footer{
  position: fixed;
  left:0;
  bottom:0;
  width:100%;
  height:120rpx;
  line-height:120rpx;
  font-size:34rpx;
  background-color:#fff;
  border-top: 1px solid #efeff4;
}

.footer-button{
  float:right;
  width:240rpx;
  height:100%;
  text-align: center;
  background:#f52d56;
  color:#fff;
}
