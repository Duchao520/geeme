.loginForgetPassword {
  width: 100%;
  height: auto;
  padding: 60rpx 72rpx;
}

.title {
  color: #333;
  font-size: 52rpx;
}

.tips{
  margin-top:15rpx;
  color:#999;
  font-size:24rpx;
}

.form{
  margin-top:74rpx;
}

input {
  width: 100%;
  height: 90rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #efeff4;
}

.inputBox {
  position: relative;
  height: auto;
}

.getCodeBox {
  height: 90rpx;
  line-height: 90rpx;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 100;
}

.noStart {
  color: #f52d56;
  font-size: 26rpx;
}

.alreadyStart {
  color: #ccc;
  font-size: 26rpx;
}

.placeholder {
  color: #ccc;
}

.loginButton {
  width: 100%;
  height: 100rpx;
  background: #f52d56;
  border-radius: 50rpx;
  box-shadow: 0 0 24rpx 0 rgba(255, 112, 112, 0.3);
  margin-top: 86rpx;
  color: white;
  font-size: 34rpx;
  text-align: center;
  line-height: 100rpx;
}
