<!-- 修改时间 -->
<van-action-sheet show="{{ isShow }}" title="修改时间" bindclose="close">
  <view class='updateMoudle'>
    <view class='updateHead'>
      <DateHeadAfter dayNumber="7" startDate="{{startDate}}" bindsetCurrentDate="setCurrentDate"></DateHeadAfter>
    </view>
    <view class='updateBody'>
      <view class='updateBodyItem' wx:for="{{24}}" wx:key="{{index}}">10:00</view>
    </view>
  </view>
  <view class='updateBottom'>
    <view class='updateBottom-left'>
      <text>已选时间</text>2018/12/2 19:30
    </view>
    <view class='updateBottom-right'>确认修改</view>
  </view>
</van-action-sheet>