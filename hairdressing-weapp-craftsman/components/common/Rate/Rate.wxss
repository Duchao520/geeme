/* 小 */
.Rate-small {
  height: 28rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}

.scoreBox-small {
  width: 142rpx;
  height: 27rpx;
  background-color: #d3d3d3;
  margin-right: 10rpx;
}

.scoreWidth-small {
  background-color: #f52d56;
  height: 27rpx;
}

.scoreImage-small {
  width: 142rpx;
  height: 27rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}

.scoreNumber-small {
  font-size: 24rpx;
  color: #f52d56;
}

/* 大 */
.Rate-big {
  width: 156rpx;

  height: 30rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  
}

.scoreBox-big {
  width: 156rpx;

  height: 30rpx;
  background-color: #d3d3d3;
  margin-right: 10rpx;
}

.scoreWidth-big {

  background-color: #f52d56;
  height: 30rpx;
}

.scoreImage-big {
  width: 156rpx;
  height: 30rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  background-size: 156rpx 30rpx;
}

.scoreNumber-big {
  font-size: 24rpx;
  color: #f52d56;
}

