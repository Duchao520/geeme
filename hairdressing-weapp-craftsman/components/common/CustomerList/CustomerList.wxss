.customerItem{
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  padding: 24rpx 24rpx 24rpx 26rpx;
  border-radius: 8rpx;
  box-shadow: 0 0 8rpx 0 rgba(174, 184, 229, .3);
  position: relative;
  margin-bottom: 40rpx;
}
.customerItem-l{
  position: relative;
}
.customerItem image{
   width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: black;
  margin-right: 20rpx;
}
.customerSex{
  width: 30rpx;
  height: 30rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  position: absolute;
  right: 11rpx;
  top: 0;
}
.customerItem-r{

}
.customerInfo{
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}
.customerName{
  color: #263238;
  font-size: 34rpx;
}
.customerLevel{
  width: 76rpx;
  height: 34rpx;
  background: #FAD685;
  border-radius: 4rpx;
  color: white;
  font-size: 20rpx;
  text-align: center;
  line-height: 34rpx;
}
.customerMobile{
  color: #333333;
  font-size: 24rpx;
  margin-top: 10rpx;
}
.customerPhotoList{
  height: 88rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  margin-top: 20rpx;
}
.customerPhotoList image{
  width: 88rpx;
  height: 88rpx;
  border-radius: 8rpx;
  background: black;
  margin-right: 20rpx;
}
.customerPrice{
  color: #999999;
  font-size: 20rpx;
  position: absolute;
  right: 32rpx;
  top: 24rpx;
}
.customerPrice text{
  color: #F52D56;
  font-size: 44rpx;
  font-weight: 600;

}