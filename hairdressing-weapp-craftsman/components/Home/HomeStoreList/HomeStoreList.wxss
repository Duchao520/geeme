.storeListItems{
 display: flex;
 flex-wrap: nowrap;
 justify-content: flex-start;
 align-items: center;
}
.storeListItem{
  width: 422rpx;
  flex-shrink: 0;
  border-radius: 16rpx;
  box-shadow: 0 0 12rpx 0 rgba(0, 0, 0, .1);
  overflow: hidden;
  padding-bottom: 26rpx;
  margin: 12rpx 0;
  margin-right: 40rpx;
}
.storeListItem:first-child{
  margin-left: 32rpx;
}
.storeListItem image{
  width: 100%;
  height: 218rpx;
}
.storeInfo{
  width: 100%;
  color: #262628;
  font-size: 32rpx;
  padding-left: 20rpx;
  margin-top: 10rpx;
}
.storeScore{
  width: 100%;
  padding-left: 20rpx;
  margin-top: 10rpx;
}
