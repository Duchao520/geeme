@import '/utils/wxss/icon.wxss';
.card {
  position:relative;
  width:686rpx;
  min-height: 154rpx;
  margin:30rpx auto 0;
  padding: 24rpx;
  border-radius: 16rpx;
  background-color: #fff;
  box-shadow: 0 0 8rpx 0 rgba(174, 184, 229, 0.3);
}

.card.selected{
  border: 4rpx solid #F52D56;
  box-shadow: 0 0 8rpx 0 rgba(245, 45, 86, .5);
}

.selected-icon{
  position: absolute;
  bottom: 0;
  right: 0;
  width: 84rpx;
  height: 54rpx;
  background: no-repeat center center/100% auto;
  background-position: 9rpx 4rpx;
  z-index: 999
}

.card-left{
  position:absolute;
  left:24rpx;
  top:24rpx;
}

.card-right{
  position:relative;
  margin-left:116rpx;
}

.right-1{
  font-size:34rpx;
  color:#263238;
}

.right-level{
  display: inline-block;
  margin-left:10rpx;
  padding:4rpx 10rpx;
  border-radius: 20rpx;
  background:#9da8cc;
  font-size:20rpx;
  color:#fff;
}

.right-2{
  margin-top:10rpx;
  font-size:24rpx;
  color:#333;
}

.right-3{
  margin-top:20rpx;
  margin-right:-32rpx;
  font-size:0;
}

.right-3 > image{
  margin-right:20rpx;
  width:88rpx;
  height:88rpx;
  border-radius:8rpx;
}

.right-buttons{
  margin-top:24rpx;
  text-align: right;
}

.right-buttons > view{
  display: inline-block;
  margin-left:30rpx;
  width:134rpx;
  height:56rpx;
  line-height:56rpx;
  text-align: center;
  font-size:28rpx;
  border-radius:28rpx;
}

.right-buttons > view:nth-child(odd){
  border: 1rpx solid #f52d56;
  color:#f52d56;
}

.right-buttons > view:nth-child(even){
  background-color:#f52d56;
  color:#fff; 
}

.right-price{
  position: absolute;
  top:0;
  right:0;
}
