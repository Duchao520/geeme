@import '/utils/wxss/icon.wxss';
.sharePic{
  padding-bottom:150rpx;
}

.gradient{
  position:fixed;
  top:0;
  left:0;
  width:100%;
  height: 1028rpx;
  background:linear-gradient(#9176f1, #fff);
}

.canvas-container{
  position:relative;
  margin:60rpx auto;
  width:610rpx;
  height:1060rpx;
  background:#fff;
  box-shadow: 0 4rpx 8rpx 0 rgba(174, 184, 229, 0.3);
  -webkit-box-shadow:0 4rpx 8rpx 0 rgba(174, 184, 229, 0.3);
  overflow: hidden;
}

.productImage{
  display: block;
  width:578rpx;
  height:578rpx;
  margin-top:18rpx;
  margin-left:16rpx;
}

.stars_line{
  padding-left:40rpx;
  font-size: 0;
  margin-top:38rpx;
}

.product-title{
  width:520rpx;
  height:96rpx;
  margin:24rpx auto 0;
  font-size:28rpx;
  color:#484848;
}

.product-price{
  padding-left:40rpx;
  font-size:32rpx;
  color:#f52d56;
}

.product-address{
  margin-top:10rpx;
  margin-left:40rpx;
  padding-left:28rpx;
  font-size:24rpx;
  color:#999;
  background: no-repeat left 6rpx;
  background-size: 25rpx 25rpx;
}

.qrcode{
  position: absolute;
  bottom:20rpx;
  right:30rpx;
  text-align:center;
  font-size:0;
}

.qrcode-image{
  width:180rpx;
  height:180rpx;
}

.qrcode-text{
  margin-top:10rpx;
  font-size:24rpx;
  color:#999;
}

.share-button{
  position:fixed;
  left:34rpx;
  bottom:48rpx;
  width:684rpx;
  height:100rpx;
  line-height:100rpx;
  text-align: center;
  color:#fff;
  font-size:34rpx;
  border-radius: 50rpx;
  background: linear-gradient(to right, #8a3aff, #ff62a5)
}

.notCanvas{
  position:absolute;
  left:0;
  top:0;
  width:100%;
  height:100%;
}

.canvas{
  position: fixed;
  left:1000px;
  /* z-index: 2;
  left:70rpx; */
  top:60rpx;
  width:305px;
  height:530px;
}