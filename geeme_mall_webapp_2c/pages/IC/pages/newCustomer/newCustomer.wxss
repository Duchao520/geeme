.container{
  box-sizing: border-box;
  padding: 40rpx;
  background: #F7F7F7;

}
.goods-item{
  margin-bottom: 38rpx;
  width: 100%;
  height: 216rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
}
.thumb{
  display: block;
  width: 216rpx;
  height: 216rpx;
  background: #cccccc;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}
.content{
  width: 460rpx;
  height: 216rpx;
  padding-left: 20rpx;
  padding-top: 18rpx;
  overflow: hidden;
}