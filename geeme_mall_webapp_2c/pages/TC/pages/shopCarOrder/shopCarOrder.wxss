@import '/utils/wxss/icon.wxss';

page{
  background-color:#f8f8f8;
}

.order-header{
  text-align: center;
  height: 90rpx;
  line-height:90rpx;
  font-size:0;
  background: #fff;
}

.header-button{
  display: inline-block;
  vertical-align: middle;
  width: 150rpx;
  height:68rpx;
  line-height:68rpx;
  text-align: center;
  font-size:24rpx;
  color: #f52d56;
  border: 1px solid #f52d56;
  background-color:#fff;
}

.header-button.active{
  border: none;
  background-color:#f52d56;
  color:#fff;
}

.container {
  width: 100%;
  margin-top:20rpx;
  padding-bottom: 200rpx;
}

/* 服务列表 */

.packagelist {
  margin-top:20rpx;
  width: 100%;
  height: auto;
  padding: 0 32rpx;
  background-color: white;
}

.package-item {
  width: 100%;
  height: 230rpx;
  padding: 36rpx 0;
  border-bottom: 4rpx solid #efeff4;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  position: relative;
}

.package-item:last-child {
  border-bottom: 0;
}

.packageavatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 6rpx;
  margin-right: 24rpx;
}

.packageinfo {
  width: 500rpx;
  height: 100%;
}

.pi-des {
  width: 500rpx;
  height: 72rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: box;
  box-orient: vertical;
  line-clamp: 2;
}

.pi-type {
  color: #7e7e7e;
  font-size: 24rpx;
  line-height: 50rpx;
}

.pi-type text {
  display: inline-block;
  margin-right: 20rpx;
}

.pi-price {
  color: #f52d56;
  font-size: 30rpx;
  font-weight: 600;
}

.pi-price text.symbol{
  font-size:20rpx;
}

.pi-price text.unable{
  margin-left:10rpx;
  color:#aaa;
  text-decoration: line-through;
  font-size:24rpx;
}

.moreicon {
  position: absolute;
  right: 0;
  top: 0;
  width: 11rpx;
  height: 90rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  background-position-y: 39rpx;
}

/* 合计金额 */

.totalprice {
  width: 100%;
  height: 120rpx;
  border-top: 2rpx solid #efeff4;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: white;
  z-index: 999;
}

.totalnum {
  width: 100%;
  height: 120rpx;
  padding: 36rpx 0 36rpx 32rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}

.totaldes {
  color: #999;
  font-size: 34rpx;
  margin-right: 12rpx;
}

.totalnumber {
  color: #f52d56;
  font-size: 40rpx;
}

.buttonnext {
  width: 240rpx;
  height: 120rpx;
  font-size: 34rpx;
  color: white;
  text-align: center;
  line-height: 120rpx;
  background-color: #f52d56;
}

.buttonStop {
  width: 240rpx;
  height: 120rpx;
  font-size: 34rpx;
  color: white;
  text-align: center;
  line-height: 120rpx;
  background-color: #cccccc;
}

/* 门店信息模块 */

.storeMoudle {
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  padding: 24rpx 32rpx 10rpx 32rpx;
  margin-top: 20rpx;
  background: #fff;
}

.storeMoudle-left {
  height: 44rpx;
  padding: 0 8rpx;
  color: white;
  font-size: 28rpx;
  border-radius: 4rpx;
  background: #f52d56;
  text-align: center;
  margin-right: 20rpx;
  flex: 0 0 auto;
}

.storeMoudle-right {
  flex: auto;
}

.storeAddress {
  line-height: 48rpx;
  color: #262628;
  font-size: 28rpx;
  margin-bottom: 6rpx;
}

.storePhone {
  line-height: 48rpx;
  color: #f52d56;
  font-size: 28rpx;
  text-align: left;
}

.AddressInfo{
  padding:0 32rpx;
  background: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAyYAAAAGBAMAAADEXZeqAAAAD1BMVEUAAAByk/P1Llhwk/P1LVYELP8VAAAAA3RSTlMAgIAsTd+1AAAAQklEQVRIx2NgYGBygQInBghgNIYCQxBvVMUAqFCBySpAZYVhsgIg3qgKeqsYHMliVMVoNhnkKgZDshhVMZpNBrkKAAn6KuT0cpUKAAAAAElFTkSuQmCC') no-repeat center bottom;
  background-color: #fff;
  background-size:100% 6rpx;
}

.default-addressInfo{
  position: relative;
  height:128rpx;
  line-height:128rpx;
}

.default-addressInfo-left{
  font-size:32rpx;
  color:#333; 
  background: no-repeat left center;
  background-size:48rpx 48rpx;
  padding-left:64rpx;
}

.default-addressInfo-right{
  position: absolute;
  width:15rpx;
  height:20rpx;
  margin-top:-10rpx;
  top:50%;
  right:0;
  background-size:100% 100%;
}

.address-card{
  position:relative;
  padding:30rpx 0;
  border-bottom:1rpx solid #e7e7e7;
}

.address-card:last-child{
  border-bottom:none;
}

.card-line-1{
  font-size:32rpx;
}

.card-line-1 > text:first-child{
  margin-right:30rpx;
}

.default{
  display: inline-block;
  margin-left:12rpx;
  width:74rpx;
  height:32rpx;
  line-height:32rpx;
  text-align: center;
  color:#f52d56;
  font-size:20rpx;
  background: #fdd5dd;
  border-radius:16rpx;
}

.card-line-2{
  width:544rpx;
  margin-top:10rpx;
  color:#555;
  font-size:24rpx;
}

.button-edit{
  position: absolute;
  width:20rpx;
  height:100%;
  top:0;
  right:0;
  background:no-repeat center center;
  background-size:15rpx 20rpx;
}

.order-row-container {
  margin-top: 20rpx;
  padding: 0 32rpx;
  background: #fff;
}

.order-row {
  height: 90rpx;
  line-height: 90rpx;
  font-size:0;
  border-bottom: 1px solid #efeff4;
}

.order-row:last-child{
  border-bottom:0;
}

.order-row > view {
  display: inline-block;
  vertical-align: top;
}

.title{
  color:#262628;
  font-size:28rpx;
}

.title.grey{
  color:#666;
}

.order-sign{
  display: inline-block;
  vertical-align: middle !important;
  margin-right:10rpx;
  width: 72rpx;
  height:32rpx;
  line-height:32rpx;
  text-align: center;
  color:#fff;
  background-color:#f52d56;
  border-radius:4rpx;
  font-size:20rpx;
}

.right {
  float: right;
  height: 100%;
  font-size:28rpx;
}

.right.arrow {
  padding-right: 30rpx;
  background: no-repeat right center;
  background-size: 12rpx;
}

.right.red{
  color:#f52d56;
  font-size:30rpx;
}

.input{
  display: inline-block;
  height:100%;
  width:600rpx;
  font-size:28rpx;
  overflow: scroll;
}

.cover{
  position:fixed;
  left:0;
  top:0;
  width:100%;
  height:100%;
  min-height:100vh;
  background: rgba(0, 0, 0, 0.5);
  z-index:1000;
}

.card-container{
  position:fixed;
  width:100%;
  left:0;
  bottom:0;
  background:#fff;
  border-radius:10rpx 10rpx 0 0;
  z-index: 1001;
}

.card-container-header{
  position:relative;
  height:128rpx;
  line-height:128rpx;
  border-bottom: 1px solid #efeff4;
  text-align: center;
  font-size:34rpx;
}

.card-container-close{
  position: absolute;
  right:34rpx;
  top:45rpx;
}

.card-list{
  height:920rpx;
  overflow: scroll;
}

.card-list::-webkit-scrollbar{
  display: none;
}

.card-list-row{
  text-align: center;
  margin-top:20rpx;
}

.card-select{
  position:absolute;
  top:50%;
  left:-80rpx;
  margin-top:-20rpx;
  width:40rpx;
  height:40rpx;
  background-size: 100% 100%;
  border-radius:50%;
}

.card-select.icon--selected{
  border:none;
}

.card {
  position:relative;
  display: inline-block;
  width: 362rpx;
  height: 230rpx;
  border-radius: 15rpx;
  background-size: 100% 100%;
  color:white;
  text-align: left;
}

.card-title{
  padding-left:20rpx;
  height:76rpx;
  line-height:76rpx;
  font-size:0;
}

.card-logo {
  margin-right:8rpx;
  width: 46rpx;
  height: 46rpx;
  border-radius:50%;
  vertical-align: middle;
}

.card-name {
  display: inline-block;
  font-size:28rpx;
  vertical-align: middle;
}

.card-info{
  position:absolute;
  bottom:16rpx;
  right:6rpx;
  width:100%;
  text-align: right;
  padding:0 14rpx;
}

.card-effect > text{
  padding:0 12rpx;
  height:26rpx;
  line-height:26rpx;
  font-size:20rpx;
  color:#333;
  border-radius:13rpx;
  background-color:#fff;
}

.card-price{
  font-size:24rpx;
}

.card-price > text{
  font-size:32rpx;
}

.card-power{
  position: absolute;
  left:20rpx;
  bottom:0;
  font-size:24rpx;
}

.card-des{
  width: 362rpx;
  margin:20rpx auto;
  font-size:24rpx;
  color:#333;
  text-align:left;
}

.card-des.unable{
  color:#f52d56;
}

.confirm-button{
  margin:20rpx auto 40rpx;
  width: 684rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #f52d56;
  text-align: center;
  line-height: 100rpx;
  font-size: 34rpx;
  color: white;
  z-index:1000;
}

.redPacket-item{
  display: inline-block;
}

.redPacket-select{
  margin-top: 10rpx;
  display: inline-block;  
  width:40rpx;
  height:40rpx;
  background-size:100% 100%;
}

