
/* 时间数据 */
.time{
  width: 100%;
  height: 76rpx;
  padding: 0 52rpx 0 32rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  margin-top: 4rpx;
}
.t-left{  
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
}
.t-l-icon{
  width: 22rpx;
  height: 34rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}
.t-l-item{
  color: #333333;
  font-size: 24rpx;
}
.t-right{
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-end;
}
.t-r-text{
  color: #999999;
  font-size: 24rpx;
}
.t-r-icon{
  width: 14rpx;
  height: 34rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  margin-left: 8rpx;
}
/* 发型师列表 */
.choose-content{
  width: 100%;
  height: auto;
  padding-bottom:150rpx;
}

/* 下一步 */
.bottom{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 2rpx solid #EFEFF4;
}
.bottom-word{
  padding-left: 32rpx;
  font-size: 28rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
}
.alt{
  color: #999999;
  margin-right: 12rpx;
}
.hairname{
  color: #333333;
}
.bottom-btn{
  width: 240rpx;
  height: 100%;
  text-align: center;
  line-height: 120rpx;
  color: white;
  font-size: 34rpx;
  background-color: #F52D56;
}