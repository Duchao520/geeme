@import '../../../../template/CountShow.wxss';
.container {
  width: 100%;
  height: auto;
  position: relative;
  /* overflow: hidden; */
}

.body {
  width: 100%;
  height: auto;
  padding: 0 32rpx 140rpx;
}

.time {
  width: 100%;
  height: 112rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 12rpx 20rpx 18rpx 20rpx;
}

.time-title {
  width: 100%;
  line-height: 34rpx;
  color: #666;
  font-size: 24rpx;
  text-align: left;
  margin-bottom: 14rpx;
}

.time-item {
  width: 100%;
  height: 36rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}

.t-i-left {
  height: 34rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
}

.t-i-icon {
  width: 20rpx;
  height: 100%;
  margin-right: 6rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}

.t-i-text {
  color: #f52d56;
  font-size: 24rpx;
}

.t-i-button {
  width: 100rpx;
  height: 36rpx;
  line-height: 36rpx;
  border: 1rpx solid #f52d56;
  border-radius: 22rpx;
  color: #f52d56;
  font-size: 20rpx;
  text-align: center;
}

/* 发型师 */

.staff {
  position: relative;
  width: 100%;
  border-radius: 16rpx;
  box-shadow: 0 0 8rpx 0 rgba(0, 0, 0, 0.1);
  margin-top: 32rpx;
  padding: 24rpx 0 32rpx 26rpx;
}

.staff-left{
  position: absolute;
  height: 100%;
  left:24rpx;
  top:24rpx;
  width:96rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

.staff-right{
  padding-left:116rpx;
}

.staff-right-1 {

}

.s-name {
  color: #263238;
  font-size: 34rpx;
  margin-right: 6rpx;
}

.s-level {
  color: #333;
  font-size: 24rpx;
}

.staff-right-2 {
  margin-top:10rpx;
  color: #999;
  font-size: 24rpx;
  text-indent: 0;
}

.staff-right-3 {
  margin-top:6rpx;
  width: 396rpx;
  color: #999;
  font-size: 24rpx;
  overflow:hidden;
  text-indent: 0;
}

.staffbutton {
  width: 100rpx;
  height: 36rpx;
  line-height: 36rpx;
  border-radius: 22rpx;
  border: 1rpx solid #f52d56;
  color: #f52d56;
  font-size: 20rpx;
  text-align: center;
  position: absolute;
  top:30rpx;
  right: 20rpx;
}

.noStaff{
  width: 100%;
  border-radius: 16rpx;
  box-shadow: 0 0 8rpx 0 rgba(0, 0, 0, 0.1);
  margin-top: 32rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  padding: 18rpx 20rpx;
}
.noStaff-left{
  font-size: 24rpx;
  color: #666666;
}
.noStaff-right{
  width: 100rpx;
  height: 36rpx;
  border-radius: 22rpx;
  border: 1px solid #f52d56;
  color: #f52d56;
  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
}

/* 已选服务 */

.service {
  width: 100%;
  height: auto;
  border-radius: 8rpx;
  margin-top: 40rpx;
  background-color: #f8f8f8;
  padding-top: 22rpx;
  padding-bottom:24rpx;
}

.service-title {
  width: 100%;
  height: 36rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 0 18rpx;
}

.service-text {
  color: #666;
  font-size: 24rpx;
}

.service-button {
  width: 100rpx;
  height: 36rpx;
  line-height: 36rpx;
  border-radius: 22rpx;
  border: 1rpx solid #f52d56;
  color: #f52d56;
  font-size: 20rpx;
  text-align: center;
}

.service-item {
  width: 100%;
  padding: 24rpx 10rpx 24rpx 30rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  border-bottom:1px solid #efeff4;
}

.service-item:last-child{
  padding-bottom:0;
  border: none;
}

.serviceimage {
  width: 160rpx;
  height: 160rpx;
  border-radius: 6rpx;
}

.servicedes {
  width: 458rpx;
  height: 72rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 36rpx;
  margin-bottom: 10rpx;
}

.packageinfo {
  color: #7e7e7e;
  font-size: 24rpx;
  margin-bottom: 6rpx;
}

.total {
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
}

.price {
  color: #f52d56;
  font-size: 30rpx;
  font-weight: 600;
  margin-right: 20rpx;
}

.count {
  color: #7e7e7e;
  font-size: 24rpx;
  line-height: 39rpx;
}

/* 备注 */

.notes {
  width: 100%;
  height: auto;
  margin-top: 40rpx;
  position: relative;
}

.title {
  width: 100%;
  line-height: 42rpx;
  color: #262628;
  font-size: 30rpx;
  font-weight: 600;
  text-align: left;
  margin-bottom: 20rpx;
}

.inputs {
  position:relative;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  overflow: hidden;
}

.textarea {
  display: block;
  height:240rpx;
  padding:20rpx 28rpx;
  background-color: #f8f8f8;
  font-size: 28rpx;
}

.wordslenth {
  position:absolute;
  right: 28rpx;
  bottom:14rpx;
  color: #aaa;
  font-size: 24rpx;
}

/* 按钮 */

.buttons {
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  right: 0;
  background-color: white;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-end;
  align-items: center;
  border-top: 2rpx solid #efeff4;
  z-index: 999;
}

.btn {
  color: #666;
  font-size: 26rpx;
  padding: 8rpx 0;
  width: 154rpx;
  text-align: center;
  border-radius: 26rpx;
  border: 1rpx solid #d8d8d8;
  margin-right: 32rpx;
}

.btn.red {
  color: #f52d56;
  border: 1rpx solid #f52d56;
}

/* moveBox插槽timeBottom */
.timeButtons{
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  right: 0;
  border-top: 2rpx solid #EFEFF4;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  background: white;
}
.timeButtons-left{
  padding-left: 16rpx;
  line-height: 120rpx;
  font-size: 28rpx;
}
.t-l-item{

}
.timeButtons-right{
  width: 238rpx;
  height: 120rpx;
  background-color: #F52D56;
  text-align: center;
  line-height: 120rpx;
  font-size: 34rpx;
  color: white;
}


