/* pages/home/details/details.wxss */
@import "/utils/wxss/icon.wxss";
@import "/utils/wxss/quill.bubble.wxss";
@import "/utils/wxss/quill.core.wxss";
@import "/utils/wxss/quill.snow.wxss";

img{
  display: block;
  width: 100% !important;
}
page{
  padding-top:80rpx;
  padding-bottom: 138rpx;
  background:#fff;
}

.shopInfo-container{
  position: relative;
  margin:0 32rpx 12rpx;
  padding:32rpx 28rpx 24rpx;
  border-radius:16rpx;
  box-shadow: 0 0 12rpx 0 rgba(0, 0, 0, .1);
  background: #fff;
}

.logo{
  position: absolute;
  top: -72rpx;
  right:40rpx;
  width:140rpx;
  height:140rpx;
  box-shadow: 0rpx 4rpx 20rpx 0rpx rgba(0, 0, 0, 0.2);
  border-radius:50%;
}


.Service{
  width: 100%;
  height: auto;
  padding: 0 32rpx;
}
.Service-item{
  width: 100%;
  height: auto;
}

.s-title{
  height: 104rpx;
  line-height:104rpx;
}

.s-title-left{
  display: inline-block;
  color: #262628;
  font-size: 40rpx;
  font-weight: 600;
}

.s-title-right{
  float:right;
  width:18rpx;
  height:100%;
  background-size: 18rpx 28rpx;
  background-position: center center;
  background-repeat: no-repeat;
}

.s-contents{
  width: 100%;
  height: auto;
}

/* 评价星级 */
.evaluationHeadScore{
  position:relative;
  height:200rpx;
  line-height:200rpx;
}

.evaluationHeadScore > view{
  display: inline-block;
  vertical-align: middle;
  line-height:normal;
}
.headScoreLeft{
  width:200rpx;
  text-align: center;
}
.headScoreLeft-score{
  line-height: 96rpx;
  color: #F52D56;
  font-size: 68rpx;
}
.headScoreLeft-title{
  color: #6A6A6A;
  font-size: 24rpx;
}

.headScoreMiddle{
  height: auto;
}
.score-professional{
  margin-bottom:10rpx;
  font-size:0;
  width: 100%;
}
.score-professional:last-child{
  margin-bottom:0;
}
.scoreTitle{
  display: inline-block;
  vertical-align: middle;
  color: #6A6A6A;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.scoreNumber{
  display: inline-block;
  vertical-align: middle;
  color:#f52d56;
  font-size:28rpx;
  margin-left:26rpx;
}

.headScoreRight{
  height:114rpx;
  margin-left:50rpx;
  padding-left: 42rpx;
  border-left: .5px solid #E7E7E7;
}
.headScoreRight-score{
  margin-top:10rpx;
  color: #999999;
  font-size: 40rpx;
  line-height: 56rpx;
}
.headScoreRight-title{
  color: #999999;
  font-size: 24rpx;
  text-align: center;
}
/* 评价数据统计 */
.evaluationData{
  padding:0 32rpx;
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  padding-top: 30rpx;
  border-top:1px solid #EBEBEB;
  border-bottom:1px solid #EBEBEB;
  position: relative;
}
.evaluationDataItem{
  padding: 14rpx 28rpx;
  border-radius: 30rpx;
  border: 1rpx solid #666666;
  font-size: 24rpx;
  color: #333333;
  margin: 0 30rpx 30rpx 0;
}
.evaluationDataItem.active{
  color: #F52D56;
  border: 1rpx solid #F52D56;
}

/* 评价底部 */
.evaluationBottom{
  width: 100%;
  height: auto;
}

.container-3{
  padding:32rpx 32rpx 0;
}

.container-4{
  padding-top:30rpx;
  font-size:0;
  width: 100%;
  height: auto;
}
.photo-item{
  display: inline-block;
  padding:1px;
  width:33.3%;
  height:250rpx;
}

.photo-item > image{
  width:100%;
  height:100%;
}

.container-5{
  padding:30rpx 32rpx 0;
  font-size:30rpx;
  line-height: 1.7;
  color: #666;
}

.bottombtn {
  width: 100%;
  background-color: white;
  height: 150rpx;
  position: fixed;
  left: 0;
  bottom: 0rpx;
  right: 0;
  margin: auto;
}

.button {
  width: 684rpx;
  height: 100rpx;
  background-color: rgba(245, 45, 86, 1);
  color: white;
  font-size: 34rpx;
  text-align: center;
  line-height: 100rpx;
  border-radius: 50rpx;
  position: absolute;
  top: 20rpx;
  left: 0;
  right: 0;
  margin: auto;
}

/* 店铺背景 */

.shopbg {
  position: absolute;
  left:0;
  top:0;
  width: 100%;
  height: 376rpx;
  z-index: -1;
}

.shopbg > image{
  width:100%;
  height:100%;
}

.shopname {
  color:#262628;
  font-size: 44rpx;
  font-weight: 600;
}

.shopstores{
  line-height: 50rpx;
}

.shopscore {
  display: inline-block;
  margin-left:10rpx;
  font-size: 24rpx;
  color: #f52d56;
}

.shoptime {
  margin-top:10rpx;
  width: 100%;
  height: 32rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: left;
}

.working {
  width: 78rpx;
  height: 28rpx;
  background-color: #7ed321;
  text-align: center;
  line-height: 28rpx;
  margin-left: 10rpx;
  font-size: 16rpx;
  border-radius: 5rpx;
  color: #fff;
}

.working.nowork {
  background-color: rgba(117, 140, 151, 1);
}

.timeicon {
  width: 20rpx;
  height: 20rpx;
  background: no-repeat center center/100% auto;
  margin-right: 6rpx;
  margin-top: 6rpx;
}

.timetext {
  height: 32rpx;
  color: #999;
  font-size: 24rpx;
  text-align: left;
  line-height: 32rpx;
}

.addressicon {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  background: no-repeat center center/100% auto;
  margin-right: 6rpx;
}

.addresstext {
  display: inline-block;
}

.addresstext > text{
  display: inline-block;
  vertical-align: middle;
}

.addresstext-address{
  max-width: 500rpx;
  color:#999;
  font-size:24rpx;
}

.addresstext-nav{
  padding-left:10rpx;
  padding-right: 20rpx;
  font-size:20rpx;
  color:#F52D56;
  background:no-repeat right center/100% auto;
  background-size:10rpx 16rpx;
  background-position: right 8rpx;
}

.shopphone {
  width: 100%;
  height: 32rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: left;
  margin-top:10rpx;
}

.phoneicon {
  width: 20rpx;
  height: 20rpx;
  margin-top: 6rpx;
  background: no-repeat center center/100% auto;
  margin-right: 6rpx;
}

.phonetext {
  height: 32rpx;
  color: #F52D56;
  font-size: 24rpx;
  text-align: left;
  line-height: 32rpx;
}

.subscript{
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 24rpx;
  color: #AAAAAA;
  display: flex;
  align-items: center;
  margin-right: 24rpx;
}
.subscript::after{
  content: '';
  display: block;
  width: 24rpx;
  height: 16rpx;
}
.downscript::after{
  background: url('data:image/png;base64,') center center no-repeat;
  background-size: 100% 100%;
}
.upscript::after{
  background: url('data:image/png;base64,') center center no-repeat;
  background-size: 100% 100%;
}
