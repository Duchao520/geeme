.evaluationDetail{
  width: 100%;
  height: auto;
}

/* 评价星级 */
.Score{
  padding:0 32rpx;
  width: 100%;
  height: 112rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}
.scoreLeft{
  color: #F52D56;
  font-size: 0;
}

.scoreRight{
  color: #999999;
  font-size: 28rpx;
}
/* 评价数据统计 */
.evaluationData{
  padding:0 32rpx;
  width: 100%;
  height: auto;
  margin-right:-32rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  border-bottom:1px solid #EBEBEB;
  position: relative;
}
.absBtm{
  position: absolute;
  bottom: 0;
  right: 30rpx;
}
.evaluationDataItem{
  padding: 14rpx 28rpx;
  border-radius: 30rpx;
  border: 1px solid #999999;
  font-size: 24rpx;
  color: #999999;
  margin: 0 30rpx 30rpx 0;
}
.evaluationDataItem.active{
  color: #F52D56;
  border: 1rpx solid #F52D56;
}

/* 评价底部 */
.evaluationBottom{
  width: 100%;
  height: auto;
}
.evalutaionBottomItem{
  padding: 38rpx 0 0;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  border-top: 2rpx solid #EBEBEB;

}
.userAvatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: black;
}
.userContent{
  max-width: 582rpx;
  margin-left: 24rpx;
  flex: auto;
  height: auto;
}
.userInfo{

  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}
.userName{
  color: #262628;
  font-size: 30rpx;
}
.userScore{
  width: 100rpx;
  height: 42rpx;
  background: black;
}
.evaluationTime{

  line-height: 64rpx;
  color: #9B9B9B;
  font-size: 24rpx;
}
.evaluationText{
  color: #666666;
  font-size: 28rpx;
  line-height: 44rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: box;
  box-orient: vertical;
  line-clamp: 3;
}
.evaluationImages{

  height: auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 14rpx;
}
.evaluationItemImage{
  width: 168rpx;
  height: 168rpx;
  background: black;
  margin-bottom: 40rpx;
}

/* 评价主体（小） */
.shopstore_bottom {
  width: 138rpx;
  height: 27rpx;
  background-color: #d3d3d3;
  margin-right: 10rpx;
}

.shopstore {
  width: 142rpx;
  height: 27rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}

.shopstore_copy {
  background-color: #f52d56;
  height: 27rpx;
}
