.payVipCard {
  width: 100%;
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-top: 20rpx;
}

.cardContent {
  width: 100%;
  height: auto;
  padding: 0 32rpx;
  background-color: white;
}

.card-container {
  position: relative;
  padding:32rpx 0;
}

.card {
  margin: 0 auto;
  position: relative;
  width: 360rpx;
  height: 228.5rpx;
  border-radius: 10rpx;
  background-size: 100% 100%;
  color: white;
  z-index: 10;
  overflow: hidden;
}

.card-title {
  padding-left: 20rpx;
  margin-top: 20rpx;
  font-size: 0;
}

.card-logo {
  margin-right: 8rpx;
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.card-name {
  display: inline-block;
  font-size: 28rpx;
  vertical-align: middle;
}

.card-info {
  position: absolute;
  bottom: 6rpx;
  width: 100%;
  text-align: right;
  padding: 0 16rpx;
}

.card-effect > text {
  padding: 0 12rpx;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 20rpx;
  color: #333;
  border-radius: 16rpx;
  background-color: #fff;
}

.card-price {
  font-size: 32rpx;
}

.totalPrice {
  width: 100%;
  height: 104rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  border-top: 2rpx solid #efeff4;
}

.totalText {
  color: #333;
  font-size: 28rpx;
}

.totalPriceItem {
  color: #f52d56;
  font-size: 33rpx;
  font-weight: 600;
}

/* 支付 */

.pay {
  width: 100%;
  height: auto;
}

.pay-header {
  width: 100%;
  line-height: 88rpx;
  padding-left: 30rpx;
  color: #333;
  font-size: 28rpx;
  text-align: left;
}

.pay-body {
  width: 100%;
  height: auto;
  background-color: white;
  padding: 0 32rpx;
}

.payitem {
  width: 100%;
  height: 120rpx;
  border-bottom: 4rpx solid rgba(239, 239, 244, 1);
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  padding-left: 88rpx;
  position: relative;
}

.payitem:last-child {
  border-bottom: 0;
}

.itemicon {
  width: 64rpx;
  height: 64rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

.itemiconwallet {
  width: 64rpx;
  height: 64rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

.itemiconvip {
  width: 64rpx;
  height: 64rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

.itemname {
  color: #333;
  font-size: 36rpx;
}

.itemselected {
  width: 40rpx;
  height: 40rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}

.itemselectedno {
  width: 40rpx;
  height: 40rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}

.moreicon {
  width: 11rpx;
  height: 100%;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}

.pay-footer {
  width: 100%;
  line-height: 102rpx;
  color: #999;
  font-size: 24rpx;
  padding-left: 30rpx;
}

/* 支付按钮 */

.btnitem {
  width: 684rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #f52d56;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 34rpx;
  position: fixed;
  left: 0;
  bottom: 40rpx;
  right: 0;
  margin: auto;
}
