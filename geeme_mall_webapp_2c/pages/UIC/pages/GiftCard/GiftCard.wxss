.cart-item{
  width: 100%;
  height: 400rpx;
  border-radius: 28rpx;
  box-shadow: 0 8rpx 16rpx 0 rgba(174,184,229,0.3);
  box-sizing: border-box;
  padding: 30rpx;
  margin-bottom: 40rpx;
  position: relative;
  background-size: 100% 100%;
}
.slogan{
  width:94rpx;
  height: 32rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  text-align: center;
  border: 1rpx solid #FFFFFF;
  border-radius: 18rpx;

}
.share{
  font-size: 56rpx;
  position: absolute;
  right: 40rpx;
  top: 40rpx;
}
.isUse{
  padding: 0 12rpx;
  height: 34rpx;
  border-radius: 16rpx;
  background: rgba(0,0,0,.5);
  line-height: 34rpx;
  text-align: center;
  position: absolute;
  left: 30rpx;
  bottom: 30rpx;
}
.price{
  position: absolute;
  right: 30rpx;
  bottom: 60rpx;
}
.expireDate{
  position: absolute;
  right: 30rpx;
  bottom: 24rpx;
}