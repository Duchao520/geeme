/* pages/UIC/pages/Recharge/Recharge.wxss */
.recharge{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #F8F8F8;
  box-sizing: border-box;
  padding-top: 20rpx;
}
.recharge .money{
  width: 100%;
  height: 194rpx;
  background: #FFFFFF;
  padding: 26rpx;
}
.fc-F52D56{
  color: #F52D56;
}

.pay-body {
  width: 100%;
  height: auto;
  background-color: white;
  padding: 0 32rpx;
}

.payitem {
  width: 100%;
  height: 120rpx;
  line-height:120rpx;
  border-bottom: 1px solid rgba(239, 239, 244, 1);
  position: relative;
  
}
.payitem:last-child{
  border-bottom: 0;
}

.itemicon {
  display: inline-block;
  vertical-align: middle;
  margin-right:24rpx;
  width: 64rpx;
  height: 64rpx;
  background-size: 100% 100%;
}

.itemicon.icon-weixin{
  background-image: url(data:image/png;base64,);
}

.itemicon.wallet{
  background-image: url(data:image/png;base64,);
}

.itemicon.icon-card{
  background-image: url(data:image/png;base64,);
}

.itemname {
  display: inline-block;
  vertical-align: middle;
  line-height:normal;
  color: #666;
  font-size: 32rpx;
}

.item-right{
  float:right;
  height:100%;
}

.item-right > view{
  display: inline-block;
  vertical-align: middle;
}

.icon-select {
  width: 40rpx;
  height: 40rpx;
  background-size:100% 100%;
}

.footer{
  width: 100%;
  height: 180rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #FFFFFF;
}
.footer .submit{
  width: 684rpx;
  height: 100rpx;
  background-color: rgba(245, 45, 86, 1);
  border-radius: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #FFFFFF;
  margin: 20rpx auto;
}
.footer .hover-submit{
  background: #cccccc;
}