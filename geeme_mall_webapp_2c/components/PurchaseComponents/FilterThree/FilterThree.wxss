.FilterThree{
  width: 100%;
  height: 0;
  transition: all .625s ease;
  overflow: hidden;
  position: absolute;
  top: 100rpx;
  right: 0;
  background: white;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  z-index: 900;
}
.FilterThree.active{
  overflow-y: scroll;
  height: calc( 100vh - 205rpx);
  z-index: 999;
}
/* 顶部 */
.FilterTop{
  width: 100%;
  height: auto;
  padding: 26rpx 0 0 32rpx;
}
.Filter-t-item{
  width: 100%;
  height: auto;
  margin-bottom: 50rpx;
}
.item-title{
  color: #333333;
  font-size: 28rpx;
}
.itemBoxs{
  margin-top: 22rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  
}
.item-box{
  min-width: 210rpx;
  line-height: 60rpx;
  color: white;
  font-size: 24rpx;
  border-radius: 50rpx;
  margin-right: 28rpx;
  background: #AAAAAA;
  text-align: center;
}

.priceInterval{
  width: 100%;
  height: 78rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}
.priceInterval-left{
  color: #333333;
  font-size: 28rpx;
  margin-right: 26rpx;
}
.priceInterval-right{
  height: 78rpx;
  flex: auto;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}
.minPrice{
  width: 210rpx;
  height: 78rpx;
  font-size: 28rpx;
  color: #AAAAAA;
  border: 2rpx solid #CCCCCC;
  padding-left: 20rpx;
}
.priceLine{
  width: 48rpx;
  height: 2rpx;
  background: #999999;
  margin: 0 10rpx;
}
.maxPrice{
  width: 210rpx;
  height: 78rpx;
  font-size: 28rpx;
  color: #AAAAAA;
}

/* 底部 */
.FilterBottom{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  border-top: 2rpx solid #EFEFF4;
}
.FilterBottom-l{
  width: 50%;
  height: 120rpx;
  color: #333333;
  font-size: 34rpx; 
  background: white;
  text-align: center;
  line-height: 120rpx;
} 
.FilterBottom-r{
  width: 50%;
  height: 120rpx;
  color: white;
  font-size: 34rpx; 
  background: #F52D56;
   text-align: center;
  line-height: 120rpx;
}