.choose-time{
  width: 100%;
  height: auto;

}
.ct-head{
  width: 100%;
  height: 158rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  position: relative;
}
.ct-head.firstTime{
  padding: 40rpx 80rpx 80rpx;
}
.ct-head.updateTime{
  padding-top: 40rpx;
}
.cth-item{
  height: 100%;
  color: #666666;
  text-align: center;
  line-height: 32rpx;
}
.cth-item.active{
  color: #F52D56;
}
.cth-text1{
  display: block;
  font-size: 24rpx;

}
.cth-text2{
  display: block;
  font-size: 28rpx;
  margin-top: 10rpx;

}
.ct-body{
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;

} 
.ctb-item{
  width: 148rpx;
  height: 70rpx;
  border-radius: 4rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 24rpx;
  color: #999999;
  background:no-repeat center center;
  background-color: white;
  border:1rpx solid rgba(221, 221, 221, 1);
  margin-bottom: 30rpx;
}
/* 埋伏好的类名 */
