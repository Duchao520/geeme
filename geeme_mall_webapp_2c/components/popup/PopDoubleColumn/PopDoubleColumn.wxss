.PopDoubleColumn{
  position:absolute;
  top:0;
  left:0;
  width:100%;
  background:#fff;
  z-index: 10;
}

.container{
  height:892rpx;
}

.left{
  float:left;
  width:172rpx;
  height:100%;
  background: #f5f5f5;
  font-size:28rpx;
  padding-bottom:30rpx;
  overflow:scroll;
}

.left-item{
  position:relative;
  height:96rpx;
  line-height:96rpx;
  text-align: center;
  color:#797979;
}

.left-item.active{
  color:#f52d56;
  background:#fff;
}

.left-item.active::before{
  content:'';
  position:absolute;
  left:0;
  top:23rpx;
  width:6rpx;
  height:50rpx;
  background:linear-gradient(#f52d56, #ff1e8b);
}

.right{
  height:100%;
  background:#fff;
  overflow:scroll;
}

.right-item{
  display: inline-block;
  margin-top:30rpx;
  margin-left:30rpx;
  width:242rpx;
  height:60rpx;
  line-height:60rpx;
  text-align: center;
  background:#f6f6f6;
  color:#999;
  font-size:24rpx;
  border-radius:30rpx;
}

.right-item.active{
  background:#f52d56;
  color:#fff;
}