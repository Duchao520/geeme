.stars-container{
  display: inline-block;
  white-space: nowrap;
  vertical-align: middle;
  font-size:0;
  background:#fff;
}

.star-background-grey{
  display: inline-block;
  vertical-align: top;
  height:100%;
  background-color: #dad9e2;
}

.star-background-grey:last-child{
  margin-right:0;
}

.star-background-red{
  height:100%;
  background-color:#f52d56;
}

.star{
  height:100%;
  background-size:100% 100%;
  background-image:url('data:image/png;base64,');
}