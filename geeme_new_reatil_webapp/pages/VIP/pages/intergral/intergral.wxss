  padding: 20rpx 32rpx;
  position: relative;
}
.search{
  margin: 0;
  display: block;
  width: 132rpx;
  height: 46rpx;
  border: 1rpx solid #FFFFFF;
  color: #FFFFFF;
  line-height: 46rpx;
  text-align: center;
  margin-top: 16rpx;
}

.tips{
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
}

.add-intergration{
  padding: 4rpx 8rpx;
  border-radius: 24rpx;
  background: #F52D56;
  font-size: 24rpx;
  color: #FFFFFF;
}

.border-bottom{
  border-bottom: 2rpx solid #EFEFF4;
}