.header{
  width: 100%;
  height: 144rpx;
  background-color: #F8F8F8;
  position: relative;
  border-bottom: 1px solid #E6E6E6;
}
.search-item{
  width: 684rpx;
  height: 72rpx;
  border-radius: 36rpx;
  line-height: 72rpx;
  background-color: white;
  padding-left: 78rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;

}
.search-icon{
  width: 34rpx;
  height: 100%;
  position: absolute;
  left: 20rpx;
  top: 0;
  bottom: 0;
  margin:auto;
  /* background: blue; */
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}
.search-input{
  width: 100%;
  height: 72rpx;
  padding-left: 10rpx;
  line-height: 72rpx;
  font-size: 32rpx;
  color: #C1C0C9;
}
.placeholder{
   font-size: 32rpx;
  color: #C1C0C9;
 
}

/* 主体 */
.footer{
  width: 100%;
  height: auto;
  padding-left: 32rpx;
}
.showcity{
  width: 100%;
  height: 124rpx;
  padding-top: 54rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: left;
  font-size: 34rpx;
  color: #F52D56;

}
.showicon{
  width: 36rpx;
  height: 36rpx;
  margin-top: 8rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  margin-right: 20rpx;
}
.showtext{

}
.choosecity{
  width: 100%;
  height: 108rpx;
  padding-top: 60rpx;
  border-top: 1rpx solid #EFEFF4;
  text-align: left;
  color: black;
  font-weight: 600;
  font-size: 34rpx;
}

.cityitem{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: left;
  font-size: 32rpx;
  color: black;
  border-bottom: 1rpx solid #EFEFF4;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  position: relative;
}
.cityitem.active{
  color: #F52D56;
}
.selecticon{
  width: 36rpx;
  height: 28rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 36rpx;
  margin: auto;
}