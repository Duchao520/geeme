@import '/template/OrderPreference/OrderPreference.wxss';
.applyrefund{
  width: 100%;
  height: auto;
  padding-bottom: 150rpx;
}
/* 头部服务 */
.serviceContent{
  width: 100%;
  height: 246rpx;
  padding: 52rpx 32rpx 34rpx 32rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start
}
.serviceImage{
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  background-color: black;
}

.serviceDes{
  width: 506rpx;
  height: 72rpx;
  line-height: 36rpx;
  color: #333333;
  font-size: 28rpx;
  overflow: hidden;
  display: box;
  text-overflow: ellipsis;
  box-orient: vertical;
  line-clamp: 2;
}
.specificationName{
  color: #7E7E7E;
  font-size: 24rpx;
  margin: 10rpx 0 6rpx;
}

.serviceCount > text{
  display: inline-block;
}

.serviceCount > text:first-child{
  font-size:30rpx;
  color:#f52d56;
  margin-right:20rpx;
}

.serviceCount > text:last-child{
  font-size:24rpx;
  color:#7e7e7e;
}

.serviceCount .symbol{
  font-size:24rpx;
}

/* 订单信息 */
.orderContent{
  width: 100%;
  padding: 0 0 20rpx;
  background-color: #F8F8F8;
}
.orderItem{
  width: 100%;
  height: 116rpx;
  padding: 16rpx 32rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
  background-color: white;
}
.orderCode{
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
}
.orderTitle{
  color: #333333;
  font-size: 24rpx;
}
.orderNumber{
  color: #999999;
  font-size: 24rpx;
}


/* 退款主体 */
.refundContent{
  width: 100%;
  padding-bottom: 20rpx;
  background-color: #F8F8F8;
}
.refundItem{
  width: 100%;
  height: auto;
  padding: 0 32rpx;
  background-color: white;
}
.refundBox{
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  padding-left: 144rpx;
  position: relative;
  border-bottom: 2rpx solid #EFEFF4;
}
.r-title{
  color: #333333;
  font-size: 28rpx;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}
.r-input{
  width: 100%;
  height: 100%;
  line-height: 96rpx;
  font-size: 28rpx;
}
.r-w-icon{
  width: 30rpx;
  height: 100%;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  position: absolute;
  background-size: 16rpx;
  right: 0;
  bottom: 0;
}

.updatePic{
  width: 100%;
  padding: 34rpx 0 34rpx;
}

.picItem{
  display: inline-block;
  width:180rpx;
  height:180rpx;
  margin-right:40rpx;
}

.picItem image{
  width:100%;
  height:100%;
}

.updatePicItem{
  display: inline-block;
  width: 180rpx;
  height: 180rpx;
  /* border: 2rpx solid #C8C7CC; */
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}

/* 温馨提示 */
.prompt{
  width: 100%;
  height: auto;
  background-color: white;
  padding: 32rpx 34rpx;
}
.promptTitle{
  width: 100%;
  margin-bottom: 24rpx;
  color: #484848;
  font-size: 34rpx;
  font-weight: 600;
}
.promptContent{
  
}
.promptItem{
  width: 100%;
  color: #666666;
  font-size: 26rpx;
  margin-bottom: 28rpx;
}

/* 退款按钮 */
.botton{  
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  right: 0;
  padding: 10rpx 0;
  background-color: white;
  z-index: 10;
}
.bottonItem{
  width: 684rpx;
  height: 100%;
  background-color: #F52D56;
  margin: 0 auto;
  text-align: center;
  line-height: 100rpx;
  font-size: 34rpx;
  color: white;
  border-radius: 50rpx;
}