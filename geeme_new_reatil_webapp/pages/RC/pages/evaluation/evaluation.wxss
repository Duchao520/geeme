/* pages/RC/pages/evaluation/evaluation.wxss */
@import '/utils/wxss/icon.wxss';
.container{
  padding: 46rpx 32rpx 200rpx;
  flex: auto;
  overflow-x: hidden;
}
/* 服务列表 */
.serviceList{
  width: 100%;
  height: 176rpx;
}
.serviceItem{
  padding: 32rpx 0 32rpx 32rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  box-shadow: 0 0 8rpx 0 rgba(174, 184, 229, 0.3);
  border-radius:15rpx;
}
.serviceImage{
  width: 110rpx;
  height: 110rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
}

.serviceDes{
  max-width: 418rpx;
  height: 64rpx;
  color: #333333;
  font-size: 24rpx;
  line-height: 32rpx;
  margin-bottom: 12rpx;
}
.servicePackage{
  color: #999999;
  font-size: 24rpx;
}

.e-A-level{
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-end;

}
.e-A-scores{
  width: 280rpx;
  height: 40rpx;
  margin-right: 34rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.e-A-selected{
  width: 40rpx;
  height: 40rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;

}
.e-A-noselected{
  width: 40rpx;
  height: 40rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
}
.e-A-des{
  text-align: left;
  color: #333333;
  font-size: 24rpx;
}

/* 印象标签 */
.label{
  width: 100%;
  height: auto;
  margin-top: 20rpx;
}
.label-title{
  width: 100%;
  line-height: 42rpx;
  text-align: left;
  color: #262628;
  font-size: 30rpx;
  font-weight: 600;
}
.label-body{
  margin-top: 24rpx;
  margin-right: -32rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  position: relative;
}
.subscript{
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 24rpx;
  color: #AAAAAA;
  display: flex;
  align-items: center;
  margin-right: 24rpx;
}
.subscript::after{
  content: '';
  display: block;
  width: 24rpx;
  height: 16rpx;
}
.downscript::after{
  background: url('data:image/png;base64,') center center no-repeat;
  background-size: 100% 100%;
}
.upscript::after{
  background: url('data:image/png;base64,') center center no-repeat;
  background-size: 100% 100%;
}
.label-item{
  width: auto;
  line-height: 60rpx;
  border: 1px solid #AAAAAA;
  padding: 0 30rpx;
  font-size: 24rpx;
  color: #999999;
  border-radius: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}
.label-item.active{
  border:1rpx solid #F52D56;
  color: #F52D56;
}

/* 服务者评分 */
.staff{
  width: 100%;
  height: auto;
  margin-top: 60rpx;
}
.staff-text{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  width: 100%;
  height: 42rpx;
}
.staff-title{
    /* width: 100%; */
  line-height: 42rpx;
  text-align: left;
  color: #262628;
  font-size: 30rpx;
  font-weight: 600;
}
.staff-alt{
  color: #999999;
  font-size: 24rpx;
}
.staff-container{
  margin-top: 20rpx;
  padding-left:26rpx;
  padding-bottom:60rpx;
  box-shadow: 0 0 8rpx 0 rgba(0, 0, 0 , 0.1);
  border-radius: 16rpx;
  overflow: hidden;
}
.staff-body{
  margin-top: 24rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
}
.staff-avatar{
  display: inline-block;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 18rpx;
}

.staff-name{
  font-size: 28rpx;
  color: #263238;
  line-height: 40rpx;
}

.evalinput{
  margin-top:40rpx;
  position:relative;
  height:240rpx;
  border-radius: 8rpx;
}

.textarea{
  height: 100%;
  padding: 20rpx 28rpx 45rpx;
  font-size: 28rpx;
  background-color: #F8F8F8;
}

.elalinputlength{
  width: 70rpx;
  height: 34rpx;
  color: #AAAAAA;
  font-size: 24rpx;
  position: absolute;
  right: 40rpx;
  bottom: 14rpx;
}

.photos{
  margin-right:-40rpx;
}

.photos > image{
  display: inline-block;
  width:180rpx;
  height:180rpx;
  margin-top:40rpx;
  margin-right:60rpx;
}

.camera{
  display: inline-block;
  width:180rpx;
  height:180rpx;
  margin-top:40rpx;
  margin-right:60rpx;
  background-image: url(data:image/png;base64,);
  background-size:100% 100%;
}

/* 匿名评价 */
.anonymous{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 40rpx;
}

.anonymoustext{
  display: inline-block;
  padding-left:42rpx;
  color: #333333;
  font-size: 28rpx;
  background: no-repeat left center;
  background-size: 32rpx 32rpx;
}

/* 提交评价 */
.submit{
  width: 100%;
  background-color: white;
  padding: 20rpx 0 40rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
}
.submit-item{
  width: 684rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #F52D56;
  color: white;
  font-size: 34rpx;
  margin: 0 auto;
  text-align: center;
  line-height: 100rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.assessment {
  margin-top: 40rpx;
  font-size: 26rpx;
  color: #262628;
}

.assessment-item {
  height: 50rpx;
}

.assessment-item view {
  display: inline-block;
  vertical-align: middle;
}

.item-title {
  width: 120rpx;
  margin-right: 86rpx;
  text-align: right;
}

.item-score > view {
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-right: 18rpx;
  vertical-align: middle;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-image: url('data:image/png;base64,');
}

.item-score > view.lose {
  background-image: url('data:image/png;base64,');
}

.item-des {
  margin-left: 16rpx;
  font-size:24rpx;
  color:#333;
}

.assessment-seperate-container {
  margin-top: 24rpx;
  background: #f8f8f8;
  padding: 30rpx 0;
}

.overall .item-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #262628;
}

.overall .score {
  background-image: url('data:image/png;base64,');
}

.overall .score.lose {
  background-image: url('data:image/png;base64,');
}

.assessment-seperate-container > .assessment-item {
  margin-top: 20rpx;
}

.assessment-seperate-container > .assessment-item:first-child {
  margin-top: 0;
}
















