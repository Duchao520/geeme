.component-container{
  border-bottom:1px solid #efeff4;
}

.tabs-container{
  position:relative;
  display: flex;
  height:90rpx;
  line-height:90rpx;
  font-size:28rpx;
  color:#484848;
  background-color:#fff;
}

.tabs-item{
  position:relative;
  flex:1;
  text-align: center;
}

.tabs-item.active{
  color:#f52d56;
}

.tabs-item > .text{
  position:absolute;
  left:0;
  top:0;
  width:100%;
  height:100%;
}

.tabs-item > .hiddenLine{
  display: inline-block;
  position:relative;
  width:56rpx;
  height:4rpx;
  background:transparent;
  vertical-align: bottom;
}

.activeLine{
  position:absolute;
  left:0;
  top:86rpx;
  width:56rpx;
  height:4rpx;
  background:#f52d56;
  transition:all .625s ease;
}