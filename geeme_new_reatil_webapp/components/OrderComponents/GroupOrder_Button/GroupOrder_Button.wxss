.GroupOrder_Button{
  display: inline-block;
  width: 202rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #f52d56;
  font-size:26rpx;
  border: 1rpx solid #f52d56;
  border-radius: 27rpx;
}

/* 弹框背景 */
.cover{
  position:fixed;
  left:0;
  top:0;
  width:100%;
  height:100%;
  min-height:100vh;
  background: rgba(0, 0, 0, 0);
  z-index:-1;
  transition: all 0.625s ease;
}

.cover.active{
  background: rgba(0, 0, 0, .5);
  z-index:999;
}

.share-container{
  position: fixed;
  top:400rpx;
  left:60rpx;
  width: 630rpx;
  background: #fff;
  text-align: center;
  border-radius: 8rpx;
  padding-bottom:34rpx;
}

.share-l1{
  display: inline-block;
  margin-top:60rpx;
  padding-left: 40rpx;
  font-size:22rpx;
  color:#999;
  background:url('data:image/png;base64,') no-repeat left center;
  background-size: 30rpx 34rpx;
}

.share-l1 > text{
  display: inline-block;
  width:40rpx;
  height:40rpx;
  line-height: 40rpx;
  text-align: center;
  color:#fff;
  background: #f52d56;
  border-radius:8rpx;
}

.share-l1 > text:first-child{
  margin-left:4rpx;
}

.share-l2{
  margin-top:14rpx;
  font-size:30rpx;
  color:#333;
}

.share-button-container {
  margin-top:36rpx;
  text-align: center;
}

.share-button-item {
  display: inline-block;
  min-width: 100rpx;
  line-height: normal;
  text-align: center;
  color: #333;
  font-size: 26rpx;
  vertical-align: middle;
}

.share-button-item > image{
  width:100rpx;
  height:100rpx;
}

.share-button-item.canvas {
  margin-right: 150rpx;
}