@import '/utils/wxss/icon.wxss';

.evaluation {
  width: 100%;
  /* height: auto; */
}

.evr-icon {
  width: 14rpx;
  height: 30rpx;
  background: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAwAAAASBAMAAACdhyI/AAAAJ1BMVEUAAACqqqqurq6rq6uurq6vr6+qqqqqqqqxsbGrq6uqqqqqqqqqqqqSAzZpAAAADHRSTlMA2BHNGBXSxBq8tRvyBVbHAAAASUlEQVQI12NgPxbAAASsMqkMIBB4TAFEscgkgbmOh6FcI2Quh8wEEMVkYwCilA9uAHMkIJwGkGk5IiBO2EEHBIcdzGHgKmVAAAC/Ag5PStH3NwAAAABJRU5ErkJggg==) no-repeat center center/100% auto;
  background-position-y: 12rpx;
  margin-left: 4rpx;
}

.evaluationbody {
  width: 100%;
  padding: 0 32rpx;
  background-color: white;
}

.evitem {
  width: 100%;
  height: 100%;
  border-bottom: 1px solid rgba(235, 235, 235, 1);
  display: flex;
  /* flex-wrap: nowrap; */
  justify-content: space-between;
  padding-top: 36rpx;
  padding-bottom:34rpx;
}

.evitem:last-child {
  border-bottom: none;
}

.evitem-left {
  width: 11.7%;
  height: 100%;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.evitem-right {
  width: 88%;
  height: 100%;
  padding-left: 24rpx;
}

.evinfo {
  width: 100%;
  height: 30rpx;
  line-height: 40rpx;
  font-size: 0;
}

.username {
  display: inline-block;
  color: rgba(38, 38, 40, 1);
  font-size: 30rpx;
}

.stores {
  width: 164rpx;
  height: 29rpx;
  background: url(data:image/png;base64,) no-repeat center center/100%;
  background-color: rgba(245, 45, 86, 1);
}

.ev-time {
  width: 100%;
  height: 28rpx;
  text-align: left;
  line-height: 28rpx;
  font-size: 24rpx;
  color: rgba(155, 155, 155, 1);
  overflow: hidden;
  margin: 20rpx 0 24rpx;
}

.ev-text {
  width: 100%;
  max-height: 130rpx;
  line-height: 44rpx;
  font-size: 28rpx;
  color: rgba(102, 102, 102, 1);
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.ev-imgs {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 14rpx;
}

.imgs-item {
  width: 168rpx;
  height: 168rpx;
  margin-right: 30rpx;
  margin-bottom: 40rpx;
}

.imgs-item:nth-child(3n) {
  margin-right: 0;
}

/* 从此处断开 */

.hairname {
  width: 100%;
  height: 32rpx;
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
  text-align: left;
  margin-bottom: 8rpx;
}

.des {
  width: 100%;
  height: 64rpx;
  background-color: rgba(248, 248, 248, 1);
  padding: 8rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  border-radius: 5rpx;
  margin-bottom: 34rpx;
}

.des-left {
  display: flex;
  flex-wrap: nowrap;
}

.ev-logo {
  width: 64rpx;
  height: 32rpx;
  background-color: rgba(245, 45, 86, 1);
  text-align: center;
  line-height: 32rpx;
  font-size: 20rpx;
  color: white;
  margin-right: 10rpx;
  margin-left: 10rpx;
  border-radius: 5rpx;
}

.ev-produce {
  color: rgba(153, 153, 153, 1);
  font-size: 24rpx;
}

.ev-price {
  color: rgba(245, 45, 86, 1);
  font-size: 24rpx;
  line-height: 64rpx;
  margin-right: 10rpx;
}

/* 缺省 */

.default {
  width: 100%;
  height: 382rpx;
  padding-top: 62rpx;
  background: white;
}

.default-icon {
  width: 200rpx;
  height: 200rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  margin: 0 auto 66rpx;
}

.default-text {
  width: 100%;
  line-height: 42rpx;
  text-align: center;
  color: #393939;
  font-size: 30rpx;
}

/* 评分 */

.score {
  float: right;
}

.score > view {
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
  vertical-align: middle;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-image: url(data:image/png;base64,);
}

.score > view.lose {
  background-image: url(data:image/png;base64,);
}

.reply {
  padding: 16rpx 20rpx;
  font-size: 24rpx;
  color: #999;
  background: #f8f8f8;
}
