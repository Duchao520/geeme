@import '/utils/wxss/icon.wxss';
@import '/utils/wxss/base.wxss';
@import '/utils/iconfont/iconfont.wxss';

.StaffCard {
  position: relative;
  margin: 40rpx auto 0;
  padding-bottom: 24rpx;
  width: 686rpx;
  border-radius: 16rpx;
  background: #fff;
  box-shadow: 0 0 8rpx 0 rgba(0, 0, 0, 0.1);
  overflow: hidden;
  line-height: normal;
  font-size: 0;
}

.StaffCard.selected{
  border: 4rpx solid #F52D56;
  box-shadow: 0 0 8rpx 0 rgba(245, 45, 86, .5);
}

.selected-icon{
  position: absolute;
  bottom: 0;
  right: 0;
  width: 84rpx;
  height: 54rpx;
  background: url(data:image/png;base64,) no-repeat center center/100% auto;
  background-position: 9rpx 4rpx;
  z-index: 999
}

.left {
  float: left;
  height: 100%;
  margin-top: 20rpx;
  margin-left: 22rpx;
  margin: 20rpx 16rpx 0 22rpx;
  text-align: center;
}

.avatar {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
}

.left-follow{
  margin-top:16rpx;
}

.left-follow > button{
  display: inline-block;
  width:86rpx;
  height:32rpx;
  line-height:32rpx;
  border-radius:16rpx;
  text-align: center;
  font-size:20rpx;
  color:#f52d56;
  border: .5px solid #f52d56;
}

.left-follow > button.followed{
  color:#999;
  border-color:#999;
}

.right {
  padding-left: 142rpx;
  margin-top: 20rpx;
}

.right-1 {
  color: #263238;
  font-size: 34rpx;
}

.right-2 {
  margin-top: 10rpx;
}

.right-2 > text {
  display: inline-block;
  vertical-align: middle;
  font-size: 24rpx;
  color: #333;
  margin-right: 12rpx;
}

.right-3 {
  margin-top: 12rpx;
}

.right-3 > text {
  display: inline-block;
  padding-left: 27rpx;
  color: #999;
  font-size: 24rpx;
  background: no-repeat left center;
  background-size: 25rpx 25rpx;
}

.right-4 {
  margin-top: 16rpx;
  white-space: nowrap;
  overflow: hidden;
}

.static {
  float:left;
  margin-right: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.scroll-view {
  display: inline-block;
  width:460rpx;
  vertical-align: middle;
}

.right-4 text {
  display: inline-block;
  vertical-align: middle;
}

.skill {
  margin-right: 10rpx;
  height: 34rpx;
  line-height: 34rpx;
  padding: 0 18rpx;
  color: #666;
  font-size: 20rpx;
  background: #f6f6f6;
  border-radius: 17rpx;
}

.right-5 {
  margin-top: 20rpx;
  overflow: hidden;
  white-space: nowrap;
}

.right-5 > image {
  margin-right: 20rpx;
  width: 88rpx;
  height: 88rpx;
  border-radius: 8rpx;
}

.reserve-line {
  margin-top: 24rpx;
  padding-right: 28rpx;
  text-align: right;
}

.reserve-line > button {
  display: inline-block;
  padding: 0 40rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  color: #fff;
  background: #f52d56;
  font-size: 28rpx;
}

.baseService {
  position: absolute;
  right: 20rpx;
  top: 12rpx;
}

.baseService-1 {
  font-size: 20rpx;
  color: #999;
  margin-right: 8rpx;
}

.baseService-2 {
  font-size: 44rpx;
  color: #f52d56;
}
